<AccessLogStatus>

  <!-- アクセスログステータス取得 -->
  <GetAccessLogStatus>
    <Statement>
      <![CDATA[
        SELECT  *
          FROM  w2_AccessLogStatus
      ]]>
    </Statement>
  </GetAccessLogStatus>

  <!-- アクセスログステータス更新 -->
  <UpdateAccessLogStatus>
    <Statement>
      <![CDATA[
        UPDATE  w2_AccessLogStatus
           SET  day_status = @day_status,
                date_changed = getdate()
      ]]>
    </Statement>
    <Parameter>
      <Input Name="day_status" Type="nvarchar" Size="2" />
    </Parameter>
  </UpdateAccessLogStatus>

  <!-- アクセスログターゲット日付＆ステータス更新 -->
  <UpdateAccessLogTargetDateAndStatus>
    <Statement>
      <![CDATA[
        UPDATE  w2_AccessLogStatus
           SET  target_date = @target_date,
                day_status = @day_status,
                date_changed = getdate()
      ]]>
    </Statement>
    <Parameter>
      <Input Name="target_date" Type="nvarchar" Size="10" />
      <Input Name="day_status" Type="nvarchar" Size="2" />
    </Parameter>
  </UpdateAccessLogTargetDateAndStatus>
  
</AccessLogStatus>