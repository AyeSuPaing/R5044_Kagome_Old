<ShortUrlInsertUpdate>
  <Column name="shop_id">
    <name>店舗ID</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max>10</length_max>
    <length_min></length_min>
    <regexp ptn="「0」固定">0</regexp>
  </Column>
  <Column name="short_url_domain_add">
    <name>ショートURL</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_ALPHNUMSYMBOL</type>
    <length></length>
    <length_max>255</length_max>
    <length_min></length_min>
    <regexp ptn="パラメータの無いURL形式"><![CDATA[^(s?https?://|/)[-_.!~*'()a-zA-Z0-9;/:@=+$,%#]+$]]></regexp>
  </Column>
  <Column name="long_url_domain_add">
    <name>ロングURL</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_ALPHNUMSYMBOL</type>
    <length></length>
    <length_max>2000</length_max>
    <length_min></length_min>
    <regexp ptn="正しいURL"><![CDATA[^(s?https?://|/)[-_.!~*'()a-zA-Z0-9;/?:@&=+$,%#]+$]]></regexp>
  </Column>
  <Column name="short_url">
    <name>ショートURL</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_ALPHNUMSYMBOL</type>
    <length></length>
    <length_max>255</length_max>
    <length_min></length_min>
  </Column>
  <Column name="long_url">
    <name>ロングURL</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_ALPHNUMSYMBOL</type>
    <length></length>
    <length_max>2000</length_max>
    <length_min></length_min>
  </Column>
</ShortUrlInsertUpdate>