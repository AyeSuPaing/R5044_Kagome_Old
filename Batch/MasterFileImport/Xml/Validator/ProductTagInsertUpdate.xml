<ProductTagInsertUpdate>
  <Column name="product_id">
    <name>商品ID</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max>30</length_max>
    <length_min></length_min>
    <regexp ptn="半角英数字、「_」、「-」、「(」、「)」、「#」">^[a-zA-Z0-9_\-\(\)#]+$</regexp>
  </Column>
  <!-- 複製に利用するため下記ノードは末尾にしてください -->
  <Column name="@@ 1 @@">
    <name>@@ 2 @@</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max>90</length_max>
    <length_min></length_min>
  </Column>
</ProductTagInsertUpdate>