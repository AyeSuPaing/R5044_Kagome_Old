<UserPointInsertUpdate>
  <Column name="user_id">
    <name>ユーザーID</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_ALPHNUM</type>
    <length></length>
    <length_max>30</length_max>
    <length_min></length_min>
  </Column>
  <Column name="point_kbn">
    <name>ポイント区分</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length>2</length>
    <regexp ptn="存在する区分（01）">^01$|^02$</regexp>
  </Column>
  <Column name="point_kbn_no">
    <name>枝番</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <number_max>9999999</number_max>
    <number_min>1</number_min>
  </Column>
  <Column name="point_type">
    <name>ポイント種別</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length>2</length>
    <regexp ptn="存在する区分（00、01）">^00$|^01$</regexp>
  </Column>
  <Column name="point">
    <name>ポイント数</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_DECIMAL</type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
    <number_max></number_max>
  </Column>
  <Column name="point_exp">
    <name>有効期限</name>
    <type>DATE_FUTURE</type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="effective_date">
    <name>利用可能期間開始日</name>
    <type>DATE</type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="add_point_exp_day">
    <name>有効期限(日単位で追加)</name>
    <necessary></necessary>
    <type></type>
    <number_max>30</number_max>
    <number_min>-30</number_min>
    <regexp ptn="数字、「-」">^[0-9\-]+$</regexp>
  </Column>
  <Column name="add_point_exp_month">
    <name>有効期限(月単位で追加)</name>
    <necessary></necessary>
    <type></type>
    <number_max>9999</number_max>
    <number_min>-9999</number_min>
    <regexp ptn="数字、「-」">^[0-9\-]+$</regexp>
  </Column>
</UserPointInsertUpdate>