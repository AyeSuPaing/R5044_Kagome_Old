<NameTranslationSettingInsertUpdate>

  <Column name="data_kbn">
    <name>対象データ区分</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max>30</length_max>
    <length_min></length_min>
    <regexp ptn="存在する区分">^Product$|^ProductVariation$|^ProductCategory$|^SetPromotion$|^ProductSet$|^Coupon$|^MemberRank$|^Payment$|^UserExtendSetting$|^ProductBrand$|^Novelty$|^News$|^OrderMemoSetting$|^FixedPurchaseCancelReason$|^ProductListDispSetting$|^SiteInformation$</regexp>
  </Column>
  <Column name="translation_target_column">
    <name>翻訳対象項目</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max>50</length_max>
    <length_min></length_min>
    <regexp ptn="半角英数字、「_」、「-」、「(」、「)」、「#」">^[a-zA-Z0-9_\-\(\)#]+$</regexp>
  </Column>
  <Column name="language_code">
    <name>言語コード</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max>4</length_max>
    <length_min></length_min>
    <regexp ptn="半角英数字、「_」、「-」、「(」、「)」、「#」">^[a-zA-Z0-9_\-\(\)#]+$</regexp>
  </Column>
  <Column name="language_locale_id">
    <name>言語ロケールID</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max>7</length_max>
    <length_min></length_min>
    <regexp ptn="半角英数字、「_」、「-」、「(」、「)」、「#」">^[a-zA-Z0-9_\-\(\)#]+$</regexp>
  </Column>
  <Column name="after_translational_name">
    <name>翻訳後名称</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="display_kbn">
    <name>HTML区分</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length>1</length>
    <regexp ptn="存在する区分（0:TEXT、1:HTML）">^0$|^1$</regexp>
  </Column>
  <Column name="display_kbn_for_user_extend">
    <name>HTML区分</name>
    <necessary>1</necessary>
    <type>HALFWIDTH</type>
    <regexp ptn="存在する区分（TEXT、HTML）">^TEXT$|^HTML$</regexp>
  </Column>

</NameTranslationSettingInsertUpdate>