<FixedPurchaseHistoryInsertUpdate>
  <Column name="fixed_purchase_id">
    <name>定期購入ID</name>
    <necessary>1</necessary>
    <length_max>30</length_max>
  </Column>
  <Column name="fixed_purchase_history_no">
    <name>定期購入注文履歴NO</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
  </Column>
  <Column name="fixed_purchase_history_kbn">
    <name>定期購入履歴区分</name>
    <length_max>10</length_max>
  </Column>
  <Column name="base_tel_no">
    <name>元電話番号</name>
    <length_max>30</length_max>
  </Column>
  <Column name="user_id">
    <name>ユーザーID</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_ALPHNUM</type>
    <length_max>30</length_max>
  </Column>
  <Column name="order_id">
    <name>注文番号</name>
    <necessary>1</necessary>
    <length_max>30</length_max>
    <regexp ptn="半角英数字、「_」、「-」、「(」、「)」、「#」">^[a-zA-Z0-9_\-\(\)#]+$</regexp>
  </Column>
  <Column name="update_order_count">
    <name>購入回数(注文基準)更新</name>
    <type>HALFWIDTH_INT</type>
  </Column>
  <Column name="update_shipped_count">
    <name>購入回数(出荷基準)更新</name>
    <type>HALFWIDTH_INT</type>
  </Column>
  <Column name="update_order_count_result">
    <name>購入回数(注文基準)更新結果</name>
    <type>HALFWIDTH_INT</type>
  </Column>
  <Column name="update_shipped_count_result">
    <name>購入回数(出荷基準)更新結果</name>
    <type>HALFWIDTH_INT</type>
  </Column>
  <Column name="date_created">
    <name>作成日</name>
    <type>DATE</type>
  </Column>
</FixedPurchaseHistoryInsertUpdate>