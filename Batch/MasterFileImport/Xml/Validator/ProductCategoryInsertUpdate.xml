<ProductCategoryInsertUpdate>
  <Column name="shop_id">
    <name>店舗ID</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max>10</length_max>
    <length_min></length_min>
    <regexp ptn="「0」固定">0</regexp>
  </Column>
  <Column name="category_id">
    <name>カテゴリID</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_ALPHNUM</type>
    <length></length>
    <length_max>30</length_max>
    <length_min></length_min>
  </Column>
  <Column name="parent_category_id">
    <name>親カテゴリID</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_ALPHNUM</type>
    <length></length>
    <length_max>30</length_max>
    <length_min></length_min>
  </Column>
  <Column name="name">
    <name>カテゴリ名</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max>40</length_max>
    <length_min></length_min>
  </Column>
  <Column name="seo_keywords">
    <name>SEOキーワード</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max>200</length_max>
    <length_min></length_min>
  </Column>
  <Column name="canonical_text">
    <name>カノニカル用テキスト</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max>100</length_max>
    <length_min></length_min>
    <regexp ptn="半角英数字、「-」、「_」">^[a-zA-Z0-9-_]+$</regexp>
  </Column>
  <Column name="url">
    <name>カテゴリページURL</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max>256</length_max>
    <length_min></length_min>
  </Column>
  <Column name="valid_flg">
    <name>有効フラグ</name>
    <necessary></necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <length_max>1</length_max>
    <length_min></length_min>
  </Column>
  <Column name="permitted_brand_ids">
    <name>許可ブランドID</name>
    <necessary></necessary>
    <type>HALFWIDTH_ALPHNUMSYMBOL</type>
    <length></length>
    <length_max>300</length_max>
    <length_min></length_min>
  </Column>
  <Column name="use_recommend_flg">
    <name>外部レコメンド利用フラグ</name>
    <necessary></necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <length_max>1</length_max>
    <length_min></length_min>
  </Column>
  <Column name="member_rank_id">
    <name>閲覧可能会員ランクID</name>
    <necessary></necessary>
    <type>HALFWIDTH_ALPHNUM</type>
    <length></length>
    <length_max>30</length_max>
    <length_min></length_min>
  </Column>
  <Column name="lower_member_can_display_tree_flg">
    <name>会員ランク表示制御：カテゴリツリー表示フラグ</name>
    <necessary></necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <length_max>1</length_max>
    <length_min></length_min>
  </Column>
  <Column name="display_order">
    <name>表示順</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <length_max>3</length_max>
    <length_min></length_min>
  </Column>
  <Column name="name_kana">
    <name>カテゴリ名 (フリガナ)</name>
    <necessary></necessary>
    <type>FULLWIDTH_KATAKANA</type>
    <length></length>
    <length_max>60</length_max>
    <length_min></length_min>
  </Column>
  <Column name="child_category_sort_kbn">
    <name>子カテゴリの並び順</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <length_max>2</length_max>
    <length_min></length_min>
  </Column>
  <Column name="only_fixed_purchase_member_flg">
    <name>定期会員限定フラグ</name>
    <necessary></necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length_max>1</length_max>
    <regexp ptn="「0」、「1」固定">^0$|^1$</regexp>
  </Column>
</ProductCategoryInsertUpdate>