<ProductReviewInsertUpdate>
  <Column name="shop_id">
    <name>店舗ID</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max>10</length_max>
    <length_min></length_min>
    <regexp ptn="「0」固定">0</regexp>
  </Column>
  <Column name="product_id">
    <name>商品ID</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max>30</length_max>
    <length_min></length_min>
    <regexp ptn="半角英数字、「_」、「-」、「(」、「)」、「#」">^[a-zA-Z0-9_\-\(\)#]+$</regexp>
  </Column>
  <Column name="review_no">
    <name>レビュー番号</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="user_id">
    <name>ユーザID</name>
    <necessary></necessary>
    <type>HALFWIDTH_ALPHNUM</type>
    <length></length>
    <length_max>30</length_max>
    <length_min></length_min>
  </Column>
  <Column name="nick_name">
    <name>ニックネーム</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max>20</length_max>
    <length_min></length_min>
  </Column>
  <Column name="review_rating">
    <name>評価</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length>1</length>
    <length_max></length_max>
    <length_min></length_min>
    <number_max>5</number_max>
    <number_min>1</number_min>
  </Column>
  <Column name="review_title">
    <name>タイトル</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max>20</length_max>
    <length_min></length_min>
  </Column>
  <Column name="review_comment">
    <name>コメント</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max>800</length_max>
    <length_min></length_min>
  </Column>
  <Column name="open_flg">
    <name>公開フラグ</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max>1</length_max>
    <length_min></length_min>
  </Column>
  <Column name="checked_flg">
    <name>管理者チェックフラグ</name>
    <necessary>1</necessary>
    <type></type>
    <length>1</length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="date_opened">
    <name>公開日</name>
    <necessary></necessary>
    <type>DATE</type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="date_checked">
    <name>管理者チェック日</name>
    <necessary></necessary>
    <type>DATE</type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
</ProductReviewInsertUpdate>