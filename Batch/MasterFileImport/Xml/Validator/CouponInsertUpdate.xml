<CouponInsertUpdate>

  <Column name="dept_id">
    <name>識別ID</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <length_max>30</length_max>
    <length_min></length_min>
    <regexp ptn="「0」固定">0</regexp>
  </Column>
  <Column name="coupon_code">
    <name>クーポンコード</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_ALPHNUMSYMBOL</type>
    <length></length>
    <length_max>30</length_max>
    <length_min></length_min>
  </Column>
  <Column name="coupon_name">
    <name>管理用クーポン名</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max>30</length_max>
    <length_min></length_min>
  </Column>
  <Column name="coupon_disp_name">
    <name>表示用クーポン名</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max>30</length_max>
    <length_min></length_min>
  </Column>
  <Column name="coupon_discription">
    <name>クーポン説明文</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="coupon_type">
    <name>クーポン種別</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <length_max>10</length_max>
    <length_min></length_min>
    <regexp ptn="存在するクーポン種別（01、02、03、04、06、07、08、11、12、21、31、41、42、43、44、45、46、47）">01|02|03|04|06|07|08|11|12|21|31|41|42|43|44|45|46|47</regexp>
  </Column>
  <Column name="coupon_count">
    <name>クーポン利用可能回数</name>
    <necessary></necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="publish_date_bgn">
    <name>クーポン発行期間(開始)</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_DATE</type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="publish_date_end">
    <name>クーポン発行期間(終了)</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_DATE</type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="discount_price">
    <name>クーポン商品割引額</name>
    <necessary></necessary>
    <type>CURRENCY</type>
    <currency_localeId>@@Global.key_currency.localeId@@</currency_localeId>
    <currency_decimal_digits>@@Global.key_currency.currencyDecimalDigits@@</currency_decimal_digits>
    <length></length>
    <number_max>@@Global.key_currency.max@@</number_max>
    <number_min>0</number_min>
  </Column>
  <Column name="discount_rate">
    <name>クーポン商品割引率</name>
    <necessary></necessary>
    <type>HALFWIDTH_DECIMAL</type>
    <length></length>
    <number_max>100</number_max>
    <number_min>0</number_min>
  </Column>
  <Column name="expire_day">
    <name>クーポン有効期限(日)</name>
    <necessary></necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <length_max></length_max>
    <length_min>0</length_min>
  </Column>
  <Column name="expire_date_bgn">
    <name>クーポン有効期間(開始)</name>
    <necessary></necessary>
    <type>HALFWIDTH_DATE</type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="expire_date_end">
    <name>クーポン有効期間(終了)</name>
    <necessary></necessary>
    <type>HALFWIDTH_DATE</type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="product_kbn">
    <name>クーポン対象商品区分</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <length_max>10</length_max>
    <length_min></length_min>
    <regexp ptn="存在する区分（01、02、03）">01|02|03</regexp>
  </Column>
  <Column name="exceptional_product">
    <name>クーポン例外商品</name>
    <necessary></necessary>
    <type>HALFWIDTH_ALPHNUMSYMBOL</type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="exceptional_icon">
    <name>クーポン例外商品アイコン</name>
    <necessary></necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="usable_price">
    <name>クーポン利用最低購入金額</name>
    <necessary></necessary>
    <type>CURRENCY</type>
    <currency_localeId>@@Global.key_currency.localeId@@</currency_localeId>
    <currency_decimal_digits>@@Global.key_currency.currencyDecimalDigits@@</currency_decimal_digits>
    <length></length>
    <number_max>@@Global.key_currency.max@@</number_max>
    <number_min>0</number_min>
  </Column>
  <Column name="use_together_flg">
    <name>クーポン併用フラグ</name>
    <necessary></necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <length_max>1</length_max>
    <length_min></length_min>
    <regexp ptn="存在する区分（0、1）">0|1</regexp>
  </Column>
  <Column name="valid_flg">
    <name>有効フラグ</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <length_max>1</length_max>
    <length_min></length_min>
    <regexp ptn="存在する区分（0、1）">0|1</regexp>
  </Column>
  <Column name="disp_flg">
    <name>フロント表示フラグ</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <length_max>1</length_max>
    <length_min></length_min>
    <regexp ptn="存在する区分（0、1）">0|1</regexp>
  </Column>
  <Column name="coupon_disp_discription">
    <name>フロント表示用クーポン説明文</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="free_shipping_flg">
    <name>クーポン配送料無料フラグ</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max>1</length_max>
    <regexp ptn="存在する区分（0、1）">0|1</regexp>
  </Column>

  <Column name="exceptional_brand_ids">
    <name>クーポン例外ブランドID</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="exceptional_product_category_ids">
    <name>クーポン例外商品カテゴリID</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
</CouponInsertUpdate>