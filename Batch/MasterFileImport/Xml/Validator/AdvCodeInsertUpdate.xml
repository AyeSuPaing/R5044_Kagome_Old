<AdvCodeInsertUpdate>
  <Column name="dept_id">
    <name>識別ID</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max>30</length_max>
    <length_min></length_min>
    <regexp ptn="「0」固定">0</regexp>
  </Column>
  <Column name="advertisement_code">
    <name>広告コード</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_ALPHNUMSYMBOL</type>
    <length></length>
    <length_max>30</length_max>
    <length_min></length_min>
  </Column>
  <Column name="media_name">
    <name>媒体名</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max>50</length_max>
    <length_min></length_min>
  </Column>
  <Column name="valid_flg">
    <name>有効フラグ</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max>10</length_max>
    <length_min></length_min>
  </Column>
  <Column name="advertisement_date">
    <name>出稿日</name>
    <type>HALFWIDTH_DATE</type>
  </Column>
  <Column name="media_cost">
    <name>媒体費</name>
    <necessary></necessary>
    <type>CURRENCY</type>
    <currency_localeId>@@Global.key_currency.localeId@@</currency_localeId>
    <currency_decimal_digits>@@Global.key_currency.currencyDecimalDigits@@</currency_decimal_digits>
    <length></length>
    <number_max>@@Global.key_currency.max@@</number_max>
    <number_min>0</number_min>
  </Column>
  <Column name="publication_date_from">
    <name>媒体掲載期間(From)</name>
    <type>HALFWIDTH_DATE</type>
  </Column>
  <Column name="publication_date_to">
    <name>媒体掲載期間(To)</name>
    <type>HALFWIDTH_DATE</type>
  </Column>
  <Column name="advcode_media_type_id">
    <name>広告媒体区分</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max>30</length_max>
    <length_min></length_min>
  </Column>
  <Column name="member_rank_id_granted_at_account_registration">
    <name>会員登録時紐づけ会員ランク</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max>30</length_max>
    <length_min></length_min>
  </Column>
  <Column name="user_management_level_id_granted_at_account_registration">
    <name>会員登録時紐づけユーザー管理レベル</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max>30</length_max>
    <length_min></length_min>
  </Column>
</AdvCodeInsertUpdate>