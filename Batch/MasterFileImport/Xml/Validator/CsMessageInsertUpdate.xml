<CsMessageInsertUpdate>
  <Column name="dept_id">
    <name>識別ID</name>
    <necessary>1</necessary>
    <regexp ptn="「0」固定">0</regexp>
  </Column>
  <Column name="incident_id">
    <name>インシデントID</name>
    <necessary>1</necessary>
    <length_max>30</length_max>
  </Column>
  <Column name="message_no">
    <name>メッセージ番号</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
  </Column>
  <Column name="media_kbn">
    <name>問合せ媒体</name>
    <necessary>1</necessary>
  </Column>
  <Column name="direction_kbn">
    <name>受発信区分</name>
    <necessary>1</necessary>
    <length_max>10</length_max>
  </Column>
  <Column name="operator_id">
    <name>作成オペレータID</name>
    <length_max>30</length_max>
  </Column>
  <Column name="inquiry_reply_date">
    <name>問合せ日時</name>
    <type>DATE</type>
  </Column>
  <Column name="message_status">
    <name>メッセージステータス</name>
    <length_max>10</length_max>
  </Column>
  <Column name="user_name1">
    <name>氏名（姓）</name>
    <type>FULLWIDTH</type>
    <length_max>20</length_max>
  </Column>
  <Column name="user_name2">
    <name>氏名（名）</name>
    <type>FULLWIDTH</type>
    <length_max>20</length_max>
  </Column>
  <Column name="user_name_kana1">
    <name>@@User.name_kana1.name@@</name>
    <type>@@User.name_kana1.type@@</type>
    <length_max>@@User.name_kana1.length_max@@</length_max>
  </Column>
  <Column name="user_name_kana2">
    <name>@@User.name_kana2.name@@</name>
    <type>@@User.name_kana2.type@@</type>
    <length_max>@@User.name_kana2.length_max@@</length_max>
  </Column>
  <Column name="user_tel1">
    <name>電話番号</name>
    <type>HALFWIDTH</type>
    <length_max>16</length_max>
  </Column>
  <Column name="user_mail_addr">
    <name>メールアドレス</name>
    <type>MAILADDRESS</type>
    <length_max>256</length_max>
  </Column>
  <Column name="inquiry_title">
    <name>件名</name>
    <length_max>50</length_max>
  </Column>
  <Column name="inquiry_text">
    <name>問合せ内容</name>
    <necessary>1</necessary>
  </Column>
  <Column name="reply_text">
    <name>回答内容</name>
  </Column>
  <Column name="reply_operator_id">
    <name>回答者</name>
    <necessary>1</necessary>
    <length_max>20</length_max>
  </Column>
  <Column name="receive_mail_id">
    <name>受信メール識別ID</name>
    <length_max>10</length_max>
  </Column>
  <Column name="send_mail_id">
    <name>送信メール識別ID</name>
    <length_max>10</length_max>
  </Column>
  <Column name="valid_flg">
    <name>有効フラグ</name>
    <length_max>10</length_max>
  </Column>
  <Column name="date_created">
    <name>作成日</name>
    <type>DATE</type>
  </Column>
  <Column name="date_changed">
    <name>更新日</name>
    <type>DATE</type>
  </Column>
</CsMessageInsertUpdate>