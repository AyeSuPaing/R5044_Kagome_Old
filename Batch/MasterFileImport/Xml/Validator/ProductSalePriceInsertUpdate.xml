<ProductSalePriceInsertUpdate>
  <Column name="shop_id">
    <name>店舗ID</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max>10</length_max>
    <length_min></length_min>
    <regexp ptn="「0」固定">0</regexp>
  </Column>
  <Column name="productsale_id">
    <name>商品セールID</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length>8</length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="product_id">
    <name>商品ID</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max>30</length_max>
    <length_min></length_min>
    <regexp ptn="半角英数字、「_」、「-」、「(」、「)」、「#」">^[a-zA-Z0-9_\-\(\)#]+$</regexp>
  </Column>
  <Column name="variation_id">
    <name>商品バリエーションID</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max>60</length_max>
    <length_min></length_min>
    <regexp ptn="半角英数字、「_」、「-」、「(」、「)」、「#」">^[a-zA-Z0-9_\-\(\)#]+$</regexp>
  </Column>
  <Column name="sale_price">
    <name>商品セール価格</name>
    <necessary>1</necessary>
    <type>CURRENCY</type>
    <currency_localeId>@@Global.key_currency.localeId@@</currency_localeId>
    <currency_decimal_digits>@@Global.key_currency.currencyDecimalDigits@@</currency_decimal_digits>
    <length></length>
    <number_max>@@Global.key_currency.max@@</number_max>
    <number_min>0</number_min>
  </Column>
  <Column name="display_order">
    <name>表示順</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <number_max></number_max>
    <number_min></number_min>
  </Column>
</ProductSalePriceInsertUpdate>