<MailDistText>
  
  <!-- メール配信文章取得 -->
  <GetMailDistText>
    <Statement>
      <![CDATA[
        SELECT  *
          FROM  w2_MailDistText
         WHERE  dept_id = @dept_id
           AND  mailtext_id = @mailtext_id
           AND  del_flg = '0'
			]]>
    </Statement>
    <Parameter>
      <Input Name="dept_id" Type="nvarchar" Size="30" />
      <Input Name="mailtext_id" Type="nvarchar" Size="30" />
    </Parameter>
  </GetMailDistText>


</MailDistText>