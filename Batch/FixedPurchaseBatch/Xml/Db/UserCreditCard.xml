<UserCreditCard>

  <!--ユーザクレジットカードリスト-->
  <GetUserCreditCards>
    <Statement>
      <![CDATA[
        SELECT  *
          FROM  w2_UserCreditCard
         WHERE  user_id = @user_id
           AND  (
                  @branch_no IS NULL
                  OR
                  branch_no = @branch_no
                )
           AND  (
                  @disp_flg IS NULL
                  OR
                  disp_flg = @disp_flg
                )
         ]]>
    </Statement>
    <Parameter>
      <Input Name="user_id" Type="nvarchar" Size="30" />
      <Input Name="branch_no" Type="int" />
      <Input Name="disp_flg" Type="nvarchar" Size="1" />
    </Parameter>
  </GetUserCreditCards>
  
</UserCreditCard>