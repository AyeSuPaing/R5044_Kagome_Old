<ProductTag>
  
  <!-- 商品タグ情報取得 -->
  <GetProductTag>
    <Statement>
      <![CDATA[
        SELECT  w2_ProductTag.*
          FROM  w2_ProductTag
       WHERE  w2_ProductTag.product_id = @product_id
      ]]>
    </Statement>
    <Parameter>
      <Input Name="product_id" Type="nvarchar" Size="30" />
    </Parameter>
  </GetProductTag>  
  
</ProductTag>