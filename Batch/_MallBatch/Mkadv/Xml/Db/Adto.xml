<Adto>
  
  <!-- 商品コンバータフォーマットマスタ店舗ID取得 -->
  <GetShopId>
    <Statement>
      <![CDATA[
        SELECT  shop_id
          FROM  w2_MallPrdcnv
         WHERE  adto_id = @adto_id
		  ]]>
    </Statement>
    <Parameter>
      <Input Name="adto_id" Type="int" />
    </Parameter>
  </GetShopId>

  <!-- 商品コンバータフォーマットマスタ取得 -->
  <GetAdto>
    <Statement>
      <![CDATA[
        SELECT  *
          FROM  w2_MallPrdcnv
         WHERE  adto_id = @adto_id
		  ]]>
    </Statement>
    <Parameter>
      <Input Name="adto_id" Type="int" />
    </Parameter>
  </GetAdto>

  <!-- 作成レコード数更新 -->
  <UpdateCreatedRecordCount>
    <Statement>
      <![CDATA[
        UPDATE  w2_MallPrdcnv
           SET  createdRecordCount = @createdRecordCount
         WHERE  adto_id = @adto_id
		  ]]>
    </Statement>
    <Parameter>
      <Input Name="adto_id" Type="int" />
      <Input Name="createdRecordCount" Type="int" />
    </Parameter>
  </UpdateCreatedRecordCount>

</Adto>