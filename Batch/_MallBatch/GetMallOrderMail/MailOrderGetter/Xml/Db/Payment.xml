<Payment>

  <!-- 決済種別一覧を取得する(モール) -->
  <GetPaymentMallList>
    <Statement>
      <![CDATA[
				SELECT	* 
				  FROM	w2_Payment
				 WHERE	shop_id = @shop_id
           AND  payment_id like 'M%'
			]]>
    </Statement>
    <Parameter>
      <Input Name="shop_id" Type="nvarchar" Size="10" />
    </Parameter>
  </GetPaymentMallList>

</Payment>
