<Mall>

  <!-- モールIDからモール設定取得 -->
  <GetMallSetingFromMallId>
    <Statement>
      <![CDATA[
        SELECT  *
          FROM  w2_MallCooperationSetting
         WHERE  w2_MallCooperationSetting.mall_id = @mall_id
      ]]>
    </Statement>
    <Parameter>
      <Input Name="mall_id" Type="nvarchar" Size="30" />
    </Parameter>
  </GetMallSetingFromMallId>
  
</Mall>