<Adto>
  
  <!-- 商品コンバータ設定取得 -->
  <GetAdto>
    <Statement>
      <![CDATA[
        SELECT  *
          FROM  w2_MallPrdcnv
         WHERE  adto_id = @adto_id
        UNION ALL
        SELECT  *
          FROM  w2_MallPrdcnv
         WHERE  adto_id = @adto_id_2
        UNION ALL
        SELECT  *
          FROM  w2_MallPrdcnv
         WHERE  adto_id = @adto_id_3
			]]>
    </Statement>
    <Parameter>
      <Input Name="adto_id" Type="int" />
      <Input Name="adto_id_2" Type="int" />
      <Input Name="adto_id_3" Type="int" />
    </Parameter>
  </GetAdto>
  
</Adto>