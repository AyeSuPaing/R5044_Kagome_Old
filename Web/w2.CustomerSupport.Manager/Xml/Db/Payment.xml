<Payment>
  <!-- 決済種別一覧を取得する(有効なもの) -->
  <GetPaymentValidList>
    <Statement>
      <![CDATA[
        SELECT  * 
          FROM  w2_Payment
         WHERE  shop_id = @shop_id
           AND  valid_flg = '1'
                [[ PAYMENT_SEARCH_ORDER_BY ]]
      ]]>
    </Statement>
    <Parameter>
      <Input Name="shop_id" Type="nvarchar" Size="10" />
    </Parameter>
  </GetPaymentValidList>

</Payment>
