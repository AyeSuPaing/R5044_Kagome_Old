<Login>

  <!-- オペレータロックアウト -->
  <UpdateUnValidFlg>
    <Statement>
      <![CDATA[
      UPDATE  w2_ShopOperator
         SET  valid_flg = 0, -- 無効
              date_changed = getdate(),
              last_changed = 'system'
       WHERE  shop_id = @shop_id
         AND  login_id = @login_id
      ]]>
    </Statement>
    <Parameter>
      <Input Name="shop_id" Type="nvarchar" Size="10" />
      <Input Name="login_id" Type="nvarchar" Size="20" />
    </Parameter>
  </UpdateUnValidFlg>
</Login>
