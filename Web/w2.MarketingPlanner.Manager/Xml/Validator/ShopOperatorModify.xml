<ShopOperatorModify>
  <Column name="name">
    <name>オペレータ名</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max>20</length_max>
    <length_min></length_min>
  </Column>
  <Column name="menu_access_level">
    <name>メニュー権限</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <length_max>5</length_max>
    <length_min></length_min>
  </Column>
  <Column name="login_id">
    <name>ログインID</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_ALPHNUMSYMBOL</type>
    <length></length>
    <length_max>16</length_max>
    <length_min>3</length_min>
    <duplication page="ShopOperator" statement="CheckDuplicationModifyLoginId">1</duplication>
  </Column>
  <Column name="password">
    <name>パスワード</name>
    <necessary></necessary>
    <type>HALFWIDTH_ALPHNUMSYMBOL</type>
    <length></length>
    <length_max>16</length_max>
    <length_min>3</length_min>
  </Column>
  <Column name="usable_affiliate_tag_ids_in_report">
    <name>閲覧可能なタグID</name>
    <necessary></necessary>
    <type>HALFWIDTH_NUMBER</type>
    <accept>,_</accept>
  </Column>
  <Column name="usable_advcode_media_type_ids">
    <name>閲覧可能な広告媒体区分ID</name>
    <necessary></necessary>
    <type>HALFWIDTH_ALPHNUMSYMBOL</type>
    <accept>,_</accept>
  </Column>
  <Column name="usable_output_locations">
    <name>閲覧可能な設置個所</name>
    <necessary></necessary>
    <type>HALFWIDTH_ALPHNUMSYMBOL</type>
    <accept>,_</accept>
  </Column>
  <Column name="mail_addr">
    <name>メールアドレス</name>
    <necessary>1</necessary>
    <regexp ptn="正しい形式">(^([\w\.\-]+)@([\w\-]+)((\.(\w){2,3})+)$)</regexp>
    <length_max>256</length_max>
  </Column>
</ShopOperatorModify>