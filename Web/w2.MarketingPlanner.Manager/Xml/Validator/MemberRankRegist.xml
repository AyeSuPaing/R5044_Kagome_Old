<MemberRankRegist>
  <Column name="member_rank_id">
    <name>ランクID</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_ALPHNUMSYMBOL</type>
    <length></length>
    <length_max>30</length_max>
    <length_min></length_min>
    <except_regexp ptn="nothing">^nothing$</except_regexp>
    <duplication page="MemberRank" statement="CheckDuplicationRegistMemberRankId">1</duplication>
  </Column>
  <Column name="member_rank_order">
    <name>ランク順位</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <number_max>999</number_max>
    <number_min>1</number_min>
    <duplication page="MemberRank" statement="CheckDuplicationRegistMemberRankOrder">1</duplication>
  </Column>
  <Column name="member_rank_name">
    <name>ランク名</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max>100</length_max>
    <length_min></length_min>
  </Column>
  <Column name="order_discount_value_rate">
    <name>注文割引数(割引率)</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <number_max>100</number_max>
    <number_min>0</number_min>
  </Column>
  <Column name="order_discount_value_fixed">
    <name>注文割引数(割引金額)</name>
    <necessary>1</necessary>
    <type>CURRENCY</type>
    <currency_localeId>@@Global.key_currency.localeId@@</currency_localeId>
    <currency_decimal_digits>@@Global.key_currency.currencyDecimalDigits@@</currency_decimal_digits>
    <length></length>
    <number_max>@@Global.key_currency.max@@</number_max>
    <number_min>0</number_min>
  </Column>
  <Column name="order_discount_threshold_price">
    <name>注文金額割引き閾値</name>
    <necessary></necessary>
    <type>CURRENCY</type>
    <currency_localeId>@@Global.key_currency.localeId@@</currency_localeId>
    <currency_decimal_digits>@@Global.key_currency.currencyDecimalDigits@@</currency_decimal_digits>
    <length></length>
    <number_max>@@Global.key_currency.max@@</number_max>
    <number_min>0</number_min>
  </Column>
  <Column name="point_add_value_rate">
    <name>ポイント加算数(加算率)</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <number_max>100</number_max>
    <number_min>0</number_min>
  </Column>
  <Column name="shipping_discount_value_fixed">
    <name>配送料割引数(割引金額)</name>
    <necessary>1</necessary>
    <type>CURRENCY</type>
    <currency_localeId>@@Global.key_currency.localeId@@</currency_localeId>
    <currency_decimal_digits>@@Global.key_currency.currencyDecimalDigits@@</currency_decimal_digits>
    <length></length>
    <number_max>@@Global.key_currency.max@@</number_max>
    <number_min>0</number_min>
  </Column>
  <Column name="shipping_discount_value_free_shipping_threshold">
    <name>配送料無料最低金額</name>
    <necessary>1</necessary>
    <type>CURRENCY</type>
    <currency_localeId>@@Global.key_currency.localeId@@</currency_localeId>
    <currency_decimal_digits>@@Global.key_currency.currencyDecimalDigits@@</currency_decimal_digits>
    <length></length>
    <number_max>@@Global.key_currency.max@@</number_max>
    <number_min>0</number_min>
  </Column>
  <Column name="fixed_purchase_discount_rate">
    <name>定期会員割引率</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <number_max>100</number_max>
    <number_min>0</number_min>
  </Column>
  <Column name="valid_flg">
    <name>有効フラグ</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_ALPHNUM</type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
</MemberRankRegist>