<MemberRankRuleRegist>
  <Column name="member_rank_rule_name">
    <name>会員ランク変動ルール名</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max>100</length_max>
    <length_min></length_min>
  </Column>
  <Column name="target_extract_start">
    <name>抽出条件集計期間開始日</name>
    <necessary></necessary>
    <type>HALFWIDTH_DATE</type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="target_extract_end">
    <name>抽出条件集計期間終了日</name>
    <necessary></necessary>
    <type>HALFWIDTH_DATE</type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="target_extract_days_ago">
    <name>抽出条件集計期間前日指定</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <number_max>10000</number_max>
    <number_min>0</number_min>
  </Column>
  <Column name="target_extract_total_price_from">
    <name>抽出条件合計購入金額範囲(From)</name>
    <necessary></necessary>
    <type>CURRENCY</type>
    <currency_localeId>@@Global.key_currency.localeId@@</currency_localeId>
    <currency_decimal_digits>@@Global.key_currency.currencyDecimalDigits@@</currency_decimal_digits>
    <length></length>
    <number_max>@@Global.key_currency.max@@</number_max>
    <number_min>0</number_min>
  </Column>
  <Column name="target_extract_total_price_to">
    <name>抽出条件合計購入金額範囲(To)</name>
    <necessary></necessary>
    <type>CURRENCY</type>
    <currency_localeId>@@Global.key_currency.localeId@@</currency_localeId>
    <currency_decimal_digits>@@Global.key_currency.currencyDecimalDigits@@</currency_decimal_digits>
    <length></length>
    <number_max>@@Global.key_currency.max@@</number_max>
    <number_min>0</number_min>
  </Column>
  <Column name="target_extract_total_count_from">
    <name>抽出条件合計購入回数範囲(From)</name>
    <necessary></necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <number_max>1000</number_max>
    <number_min>0</number_min>
  </Column>
  <Column name="target_extract_total_count_to">
    <name>抽出条件合計購入回数範囲(To)</name>
    <necessary></necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <number_max>1000</number_max>
    <number_min>0</number_min>
  </Column>
  <!-- 合計購入金額・回数が、少なくとも1つは入力されているかチェック -->
  <Column name="target_extract_total_price_count_check">
    <name>抽出条件合計購入金額・回数</name>
    <necessary>1</necessary>
  </Column>
  <Column name="rank_change_type">
    <name>ランク付与方法</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="rank_change_rank_id">
    <name>指定付与ランクID</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="exec_timing">
    <name>実行タイミング</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="schedule_date">
    <name>スケジュール日付</name>
    <necessary></necessary>
    <type>HALFWIDTH_DATE</type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="valid_flg">
    <name>有効フラグ</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="target_ids">
    <name>ターゲット</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
</MemberRankRuleRegist>