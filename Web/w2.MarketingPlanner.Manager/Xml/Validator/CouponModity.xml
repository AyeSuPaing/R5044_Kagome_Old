<CouponModity>
  <Column name="coupon_code">
    <name>クーポンコード</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_ALPHNUMSYMBOL</type>
    <length></length>
    <length_max>30</length_max>
    <length_min></length_min>
    <duplication page="Coupon" statement="CheckDuplicationUpdateCouponCode">1</duplication>
  </Column>
  <Column name="coupon_name">
    <name>クーポン名(管理用)</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max>30</length_max>
    <length_min></length_min>
  </Column>
  <Column name="coupon_disp_name">
    <name>クーポン名(ユーザ表示用)</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max>30</length_max>
    <length_min></length_min>
  </Column>
  <Column name="coupon_disp_name_mobile">
    <name>モバイル用クーポン名(ユーザ表示用)</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max>30</length_max>
    <length_min></length_min>
  </Column>
  <Column name="coupon_discription">
    <name>クーポン説明(ユーザ表示用)</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="coupon_discription_mobile">
    <name>モバイル用クーポン説明(ユーザ表示用)</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="valid_flg">
    <name>有効フラグ</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>  
  <Column name="coupon_type">
    <name>発行パターン</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="coupon_count">
    <name>利用可能回数</name>
    <necessary></necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <number_max></number_max>
    <number_min>1</number_min>
  </Column>
  <Column name="publish_date_bgn">
    <name>発行期間(開始)</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_DATE</type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="publish_date_end">
    <name>発行期間(終了)</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_DATE</type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="discount_price">
    <name>割引金額</name>
    <necessary>1</necessary>
    <type>CURRENCY</type>
    <currency_localeId>@@Global.key_currency.localeId@@</currency_localeId>
    <currency_decimal_digits>@@Global.key_currency.currencyDecimalDigits@@</currency_decimal_digits>
    <length></length>
    <number_max>@@Global.key_currency.max@@</number_max>
    <number_min>0</number_min>
  </Column>
  <Column name="discount_rate">
    <name>割引率</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_DECIMAL</type>
    <length></length>
    <number_max>100</number_max>
    <number_min>0</number_min>
  </Column>
  <Column name="expire">
    <name>有効期限・有効期間</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <number_max></number_max>
    <number_min></number_min>
  </Column>
  <Column name="expire_day">
    <name>有効期限</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_DECIMAL</type>
    <length></length>
    <number_max></number_max>
    <number_min>0</number_min>
  </Column>
  <Column name="expire_date_bgn">
    <name>有効期間(開始)</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_DATE</type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="expire_date_end">
    <name>有効期間(終了)</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_DATE</type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="exceptional_product">
    <name>商品ID</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="exceptional_icon">
    <name>キャンペーンアイコン</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>  
  <Column name="usable_price">
    <name>利用時の最低購入金額指定</name>
    <necessary>1</necessary>
    <type>CURRENCY</type>
    <currency_localeId>@@Global.key_currency.localeId@@</currency_localeId>
    <currency_decimal_digits>@@Global.key_currency.currencyDecimalDigits@@</currency_decimal_digits>
    <length></length>
    <number_max>@@Global.key_currency.max@@</number_max>
    <number_min>0</number_min>
  </Column>
</CouponModity>