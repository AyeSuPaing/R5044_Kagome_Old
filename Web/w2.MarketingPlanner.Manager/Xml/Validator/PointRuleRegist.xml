<PointRuleRegist>
  <Column name="point_rule_name">
    <name>ルール名</name>
    <necessary>1</necessary>
    <length></length>
    <length_max>30</length_max>
    <length_min></length_min>
  </Column>
  <Column name="point_kbn">
    <name>ポイント区分</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length>2</length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="point_inc_kbn">
    <name>ポイント加算区分</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length>2</length>
    <length_max></length_max>
    <length_min></length_min>
    <duplication_daterange page="PointRule" statement="CheckDuplicationInsertPointIncKbn">1</duplication_daterange>
  </Column>
  <Column name="inc_type">
    <name>ポイント計算方法</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length>2</length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="inc">
    <name>ポイント加算ルール</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="inc_num">
    <name>ポイント加算ルール（加算数）</name>
    <necessary></necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="inc_rate">
    <name>ポイント加算ルール（加算率）</name>
    <necessary></necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="exp_bgn">
    <name>ルール有効期間（開始）</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_DATE</type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="exp_end">
    <name>ルール有効期間（終了）</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_DATE</type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="point_exp_extend">
    <name>ポイント有効期限の延長設定</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="priority">
    <name>優先順位</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="valid_flg">
    <name>有効フラグ</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length>1</length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
    <Column name="incFixedPurchase">
    <name>定期ポイント加算ルール</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="fixed_purchase_inc_num">
    <name>定期ポイント加算ルール（加算数）</name>
    <necessary></necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="fixed_purchase_inc_rate">
    <name>定期ポイント加算ルール（加算率）</name>
    <necessary></necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="effective_offset">
    <name>期間限定ポイント有効期間（ポイント利用可能までのオフセット）</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <number_min>0</number_min>
    <number_max>99</number_max>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="term">
    <name>期間限定ポイント有効期間</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <number_min>1</number_min>
    <number_max>99</number_max>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="period_begin">
    <name>期間限定ポイント有効期間（開始日）</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_DATE</type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="period_end">
    <name>期間限定ポイント有効期間（終了日）</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_DATE</type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
</PointRuleRegist>