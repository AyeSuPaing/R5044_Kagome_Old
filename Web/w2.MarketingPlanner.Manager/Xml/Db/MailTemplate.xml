<MailTemplate>

  <!-- メールテンプレート情報全取得 -->
  <GetMailTemplateAllList>
    <Statement>
      <![CDATA[
        SELECT  w2_MailTemplate.*
          FROM  w2_MailTemplate
         WHERE  w2_MailTemplate.shop_id = @shop_id 
      ]]>
    </Statement>
    <Parameter>
      <Input Name="shop_id" Type="nvarchar" Size="10" />
    </Parameter>
  </GetMailTemplateAllList>

  <!-- メールテンプレート情報取得 -->
  <GetMailTemplate>
    <Statement>
      <![CDATA[      
        SELECT  TOP 1 * 
          FROM  w2_MailTemplate
         WHERE  w2_MailTemplate.shop_id = @shop_id
           AND  w2_MailTemplate.mail_id = @mail_id 
      ]]>
    </Statement>
    <Parameter>
      <Input Name="shop_id" Type="nvarchar" Size="10" />
      <Input Name="mail_id" Type="nvarchar" Size="10" />
    </Parameter>
  </GetMailTemplate>
  
</MailTemplate>