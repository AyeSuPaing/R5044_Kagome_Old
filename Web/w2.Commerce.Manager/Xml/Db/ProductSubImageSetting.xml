<ProductSubImageSetting>

  <!-- 商品サブ画像設定取得 -->
  <GetProductSubImageSettingList>
    <Statement>
      <![CDATA[
      SELECT  *
        FROM  w2_ProductSubImageSetting
       WHERE  w2_ProductSubImageSetting.shop_id = @shop_id
         AND  w2_ProductSubImageSetting.product_sub_image_no <= @product_sub_image_no
      ]]>
    </Statement>
    <Parameter>
      <Input Name="shop_id" Type="nvarchar" Size="10" />
      <Input Name="product_sub_image_no" Type="int" />
    </Parameter>
  </GetProductSubImageSettingList>

  <!-- 商品サブ画像設定削除 -->
  <DeleteProductSubImageSettingList>
    <Statement>
      <![CDATA[
      DELETE  w2_ProductSubImageSetting
       WHERE  shop_id = @shop_id
      ]]>
    </Statement>
    <Parameter>
      <Input Name="shop_id" Type="nvarchar" Size="10" />
    </Parameter>
  </DeleteProductSubImageSettingList>

  <!-- 商品サブ画像設定挿入 -->
  <InsertProductSubImageSettingList>
    <Statement>
      <![CDATA[
          INSERT  w2_ProductSubImageSetting
                  (
                    shop_id,
                    product_sub_image_no,
                    product_sub_image_name,
                    last_changed
                  )
          VALUES  (
                    @shop_id,
                    @product_sub_image_no,
                    @product_sub_image_name,
                    @last_changed
                  )
      ]]>
    </Statement>
    <Parameter>
      <Input Name="shop_id" Type="nvarchar" Size="10" />
      <Input Name="product_sub_image_no" Type="int" />
      <Input Name="product_sub_image_name" Type="nvarchar" Size="30" />
      <Input Name="last_changed" Type="nvarchar" Size="20" />
    </Parameter>
  </InsertProductSubImageSettingList>

</ProductSubImageSetting>

