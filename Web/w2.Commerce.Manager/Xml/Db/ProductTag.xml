<ProductTag>
  
  <!-- 商品タグINSERT(削除後に登録するため更新はなし) -->
  <InsertProductTag>
    <Statement>
      <![CDATA[
        INSERT  w2_ProductTag
                (
                product_id,
                @@ fields1 @@
                date_created,
                date_changed,
                last_changed
                )
        VALUES  (
                @product_id,
                @@ fields2 @@
                getdate(),
                getdate(),
                @last_changed
                )
        ]]>
    </Statement>
    <Parameter>
      <Input Name="product_id" Type="nvarchar" Size="30" />
      <Input Name="date_created" Type="datetime" />
      <Input Name="date_changed" Type="datetime" />
      <Input Name="last_changed" Type="nvarchar" Size="20" />
      <!-- 動的に増減するカラムのパラメタはプログラム側で追加する -->
    </Parameter>
  </InsertProductTag>

  <!-- 商品タグDELETE -->
  <DeleteProductTag>
    <Statement>
      <![CDATA[
        DELETE  w2_ProductTag
         WHERE  product_id = @product_id
      ]]>
    </Statement>
    <Parameter>
      <Input Name="product_id" Type="nvarchar" Size="30" />
    </Parameter>
  </DeleteProductTag>

  <!-- 商品タグ情報取得 -->
  <GetProductTag>
    <Statement>
      <![CDATA[
        SELECT  w2_ProductTag.*
          FROM  w2_ProductTag
       WHERE  w2_ProductTag.product_id = @product_id
      ]]>
    </Statement>
    <Parameter>
      <Input Name="product_id" Type="nvarchar" Size="30" />
    </Parameter>
  </GetProductTag>
  
</ProductTag>