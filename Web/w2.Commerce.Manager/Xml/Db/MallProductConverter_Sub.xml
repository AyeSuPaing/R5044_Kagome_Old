<MallProductConverter_Sub>

  <!-- 商品変換先情報一覧取得用WHERE文 -->
  <MALLPRODUCTCONVERTER_SEARCH_WHERE>
    <Statement>
      <![CDATA[
         WHERE  shop_id = @shop_id
      ]]>
    </Statement>
  </MALLPRODUCTCONVERTER_SEARCH_WHERE>

  <!-- 商品変換先情報一覧取得用ORDER_BY -->
  <MALLPRODUCTCONVERTER_SEARCH_ORDER_BY>
    <Statement>
      <![CDATA[
        ORDER BY
          w2_MallPrdcnv.adto_name ASC, w2_MallPrdcnv.adto_id ASC,
          -- 常に一定の結果セットを得るため、主キー（昇順）ソート
          w2_MallPrdcnv.adto_id ASC
      ]]>
    </Statement>
  </MALLPRODUCTCONVERTER_SEARCH_ORDER_BY>

  <!-- ファイル一覧取得用WHERE文 -->
  <MALLPRODUCTCONVERTERFILES_SEARCH_WHERE>
    <Statement>
      <![CDATA[
         WHERE  w2_MallPrdcnvFiles.adto_id = @adto_id
      ]]>
    </Statement>
  </MALLPRODUCTCONVERTERFILES_SEARCH_WHERE>

  <!-- ファイル一覧取得用ORDER_BY -->
  <MALLPRODUCTCONVERTERFILES_SEARCH_ORDER_BY>
    <Statement>
      <![CDATA[
        ORDER BY
          w2_MallPrdcnvFiles.adfiles_id DESC,
          -- 常に一定の結果セットを得るため、主キー（昇順）ソート
          w2_MallPrdcnvFiles.adfiles_id ASC
      ]]>
    </Statement>
  </MALLPRODUCTCONVERTERFILES_SEARCH_ORDER_BY>

</MallProductConverter_Sub>