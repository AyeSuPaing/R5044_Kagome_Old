<ProductStockMessage_Sub>

  <!-- 商品在庫文言情報一覧取得用WHERE文 -->
  <PRODUCTSTOCKMESSAGE_SEARCH_WHERE>
    <Statement>
      <![CDATA[
         WHERE  w2_ProductStockMessage.shop_id = @shop_id
      ]]>
    </Statement>
  </PRODUCTSTOCKMESSAGE_SEARCH_WHERE>

  <!-- 商品在庫文言情報一覧取得用ORDER_BY -->
  <PRODUCTSTOCKMESSAGE_SEARCH_ORDER_BY>
    <Statement>
      <![CDATA[
        ORDER BY
          w2_ProductStockMessage.stock_message_id ASC,
          -- 常に一定の結果セットを得るため、主キー（昇順）ソート
          w2_ProductStockMessage.shop_id ASC, w2_ProductStockMessage.stock_message_id ASC
      ]]>
    </Statement>
  </PRODUCTSTOCKMESSAGE_SEARCH_ORDER_BY>

</ProductStockMessage_Sub>