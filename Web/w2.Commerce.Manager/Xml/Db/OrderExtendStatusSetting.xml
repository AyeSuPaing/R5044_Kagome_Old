<OrderExtendStatusSetting>

  <!-- 注文拡張ステータス設定取得 -->
  <GetOrderExtendStatusSettingList>
    <Statement>
      <![CDATA[
        -- 利用可能枝番までを取得。
        SELECT  *
          FROM  w2_OrderExtendStatusSetting
         WHERE  w2_OrderExtendStatusSetting.extend_status_no <= @extend_status_max
      ]]>
    </Statement>
    <Parameter>
      <Input Name="extend_status_max" Type="int" />
    </Parameter>
  </GetOrderExtendStatusSettingList>

  <!-- 注文拡張ステータス設定削除 -->
  <DeleteOrderExtendStatusSettingList>
    <Statement>
      <![CDATA[
        DELETE  w2_OrderExtendStatusSetting
      ]]>
    </Statement>
    <Parameter>
      <Input Name="shop_id" Type="nvarchar" Size="10" />
    </Parameter>
  </DeleteOrderExtendStatusSettingList>

  <!-- 注文拡張ステータス設定挿入 -->
  <InsertOrderExtendStatusSettingList>
    <Statement>
      <![CDATA[
        INSERT  w2_OrderExtendStatusSetting
                (
                  shop_id,
                  extend_status_no,
                  extend_status_name,
                  last_changed
                )
        VALUES  (
                  @shop_id,
                  @extend_status_no,
                  @extend_status_name,
                  @last_changed
                )
      ]]>
    </Statement>
    <Parameter>
      <Input Name="shop_id" Type="nvarchar" Size="10" />
      <Input Name="extend_status_no" Type="int" />
      <Input Name="extend_status_name" Type="nvarchar" Size="30" />
      <Input Name="last_changed" Type="nvarchar" Size="20" />
    </Parameter>
  </InsertOrderExtendStatusSettingList>

</OrderExtendStatusSetting>

