<Cart>
  <!--  ショッピングカート削除処理 -->
  <DeleteCart>
    <Statement>
      <![CDATA[
        DELETE 
            w2_Cart
        WHERE 
            w2_Cart.date_changed < @delete_target_date  -- 処理対象(更新日付を条件フィールドとする)
      ]]>
    </Statement>
    <Parameter>
      <Input Name="delete_target_date" Type="datetime" />
    </Parameter>
  </DeleteCart>
</Cart>