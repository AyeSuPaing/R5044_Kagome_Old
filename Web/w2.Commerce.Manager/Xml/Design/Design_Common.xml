<Design_Common>

  <PageSetting name="全ページ共通" path="">
    <!--－－－－－－－－－－－－－－－－－－－－－－－－－-->
    <!-- 共通タグ -->
    <!--－－－－－－－－－－－－－－－－－－－－－－－－－-->
    <TagSetting>
      <Raw><![CDATA[<%= Request.Url.Scheme + Uri.SchemeDelimiter %>]]></Raw>
      <Description>
        <![CDATA[
        現在表示しているページのスキーマとデリミタを出力します。
        
        ・出力例
        「http://」 や 「https://」
        ]]>
      </Description>
    </TagSetting>
    
    <TagSetting>
      <Raw><![CDATA[<%= Constants.PATH_ROOT %>]]></Raw>
      <Description>
        <![CDATA[
        ドメイン以降からサイトルートまでのパス（ルートパス）を出力します。
        
        ・出力例
        「/」 や 「/TestSite/xxx_xxxx/」
        
        ・記述例
        「<%= Constants.PATH_ROOT %>Form/Error.aspx」
        ]]>
      </Description>
    </TagSetting>
    
    <TagSetting>
      <Raw><![CDATA[<%= this.UnsecurePageProtocolAndHost + Constants.PATH_ROOT %>]]></Raw>
      <Description>
        <![CDATA[
        セキュア必須でないページへのスキーマ＋デリミタ＋ルートパスを出力します。
        
        ・出力例
        「http://xxxxx.jp/」や
        「http://www.sample.com/TestSite/xxx_xxxx/」
        （ログイン状態により「https」となる）
        
        ・記述例
        「<%= this.UnsecurePageProtocolAndHost + Constants.PATH_ROOT %>Form/Error.aspx」
        ]]>
      </Description>
    </TagSetting>
    
    <TagSetting>
      <Raw><![CDATA[<%= this.SecurePageProtocolAndHost + Constants.PATH_ROOT %>]]></Raw>
      <Description>
        <![CDATA[
        セキュア必須ページへのスキーマ＋デリミタ＋ルートパスを出力します。
        
        ・出力例
        「https://xxxxx.jp/」や
        「https://www.sample.com/TestSite/xxx_xxxx/」
        （通常は「https」となる）
        
        ・記述例
        「<%= this.SecurePageProtocolAndHost + Constants.PATH_ROOT %>Form/Error.aspx」
        ]]>
      </Description>
    </TagSetting>

    <TagSetting>
      <RawBgn><![CDATA[<% if (Constants.SETTING_PRODUCTION_ENVIRONMENT) { %>]]></RawBgn>
      <RawEnd><![CDATA[<%} %>]]></RawEnd>
      <Description>
        <![CDATA[
        本番環境でのみ表示する領域を指定します。
        ※テスト環境では表示させたくない記述などは本タグにより囲ってください。
        ]]>
      </Description>
    </TagSetting>

    <!--－－－－－－－－－－－－－－－－－－－－－－－－－-->
    <!-- 共通ユーザー系 -->
    <!--－－－－－－－－－－－－－－－－－－－－－－－－－-->
    <TagSetting>
      <Raw><![CDATA[<%= WebSanitizer.HtmlEncode(this.LoginUserName) %>]]></Raw>
      <Description>
        <![CDATA[
        ログイン中のユーザー名をHTMLエンコードして出力します。
        ]]>
      </Description>
    </TagSetting>
    
    <TagSetting>
      <Raw><![CDATA[<%= WebSanitizer.HtmlEncode(GetNumeric(this.LoginUserPointUsable)) %>]]></Raw>
      <Description>
        <![CDATA[
        ログイン中のユーザー利用可能ポイントをHTMLエンコードして出力します。
        ]]>
      </Description>
    </TagSetting>

    <TagSetting>
      <Raw><![CDATA[<%= WebSanitizer.HtmlEncode(GetNumeric(this.LoginUserPointTemp)) %>]]></Raw>
      <Description>
        <![CDATA[
        ログイン中の仮ユーザーポイントをHTMLエンコードして出力します。
        ]]>
      </Description>
    </TagSetting>

    <TagSetting>
      <Raw><![CDATA[<% if (this.LoginUserPointExpiry.HasValue) { %>
      有効期限: <%= WebSanitizer.HtmlEncode(this.LoginUserPointExpiry.Value.ToString("yyyy年M月d日")) %>
      <% } %>]]></Raw>
      <Description>
        <![CDATA[
        ログイン中のユーザーのポイント有効期限をHTMLエンコードして出力します。
        ]]>
      </Description>
    </TagSetting>

    <TagSetting>
      <RawBgn><![CDATA[<%if (this.IsLoggedIn == false) { %>]]></RawBgn>
      <RawEnd><![CDATA[<%} // (this.IsLoggedIn == false) %>]]></RawEnd>
      <Description>
        <![CDATA[
        ログオフ中に表示する領域を指定します。
        ]]>
      </Description>
    </TagSetting>
    
    <TagSetting>
      <RawBgn><![CDATA[<%if (this.IsLoggedIn) { %>]]></RawBgn>
      <RawEnd><![CDATA[<%} // (this.IsLoggedIn) %>]]></RawEnd>
      <Description>
        <![CDATA[
        ログイン中に表示する領域を指定します。
        ]]>
      </Description>
    </TagSetting>

    <!--－－－－－－－－－－－－－－－－－－－－－－－－－-->
    <!-- 共通カート系 -->
    <!--－－－－－－－－－－－－－－－－－－－－－－－－－-->
    <TagSetting>
      <Raw><![CDATA[<%= WebSanitizer.HtmlEncode(GetNumeric(this.ProductCount)) %>]]></Raw>
      <Description>
        <![CDATA[
        カートに投入されている商品数を出力します。
        ]]>
      </Description>
    </TagSetting>
    <TagSetting>
      <Raw><![CDATA[<%= WebSanitizer.HtmlEncode(GetNumeric(this.ProductPriceSubtotal)) %>]]></Raw>
      <Description>
        <![CDATA[
        カートに投入されている商品の合計金額を出力します。
        ]]>
      </Description>
    </TagSetting>

    <!--－－－－－－－－－－－－－－－－－－－－－－－－－-->
    <!-- 共通その他 -->
    <!--－－－－－－－－－－－－－－－－－－－－－－－－－-->
    <TagSetting>
      <RawHead><![CDATA[<%= WebSanitizer.HtmlEncode(ShopMessage.GetMessage("]]></RawHead>
      <RawFoot><![CDATA[")) %>]]></RawFoot>
      <Description>
        <![CDATA[
        ショップメッセージを出力します。
        （「***」は項目名を指定）
        
        ・記述例
        「<%= WebSanitizer.HtmlEncode(ShopMessage.GetMessage("ShopName")) %>」
        ]]>
      </Description>
    </TagSetting>

    <TagSetting>
      <RawHead><![CDATA[<%= ShopMessage.GetMessage("]]></RawHead>
      <RawFoot><![CDATA[") %>]]></RawFoot>
      <Description>
        <![CDATA[
        ショップメッセージをHTMLエンコードせず出力します。
        （「***」は項目名を指定）
        
        ・記述例
        「<%= ShopMessage.GetMessage("ShopName") %>」
        ]]>
      </Description>
    </TagSetting>

    <TagSetting>
      <RawBgn><![CDATA[<%if (ShopMessage.GetMessage("ReturnSpecialContractPage") != "") {%>]]></RawBgn>
      <RawEnd><![CDATA[<%} // (ShopMessage.GetMessage("ReturnSpecialContractPage") != "") %>]]></RawEnd>
      <Description>
        <![CDATA[
        返品特約ページURLが設定されているときに表示する領域を指定します。
        ]]>
      </Description>
    </TagSetting>
    
    <TagSetting>
      <Raw><![CDATA[<%= WebSanitizer.HtmlEncode(ShopMessage.GetMessage("ReturnSpecialContractPage")) %>]]></Raw>
      <Description>
        <![CDATA[
        返品特約ページURLを表示します。
        ※URLはルート以下のPATHとなります。
        
        ・記述例
        「<%= this.UnsecurePageProtocolAndHost + Constants.PATH_ROOT %><%= WebSanitizer.HtmlEncode(ShopMessage.GetMessage("ReturnSpecialContractPage")) %>」
        ]]>
      </Description>
    </TagSetting>

    <!--－－－－－－－－－－－－－－－－－－－－－－－－－-->
    <!-- 共通ページURL系 -->
    <!--－－－－－－－－－－－－－－－－－－－－－－－－－-->
    <TagSetting>
      <Raw><![CDATA[<%= Constants.PATH_ROOT + Constants.PAGE_FRONT_USER_REGIST_REGULATION %>]]></Raw>
      <Description>
        <![CDATA[
        新規会員登録ページURLを出力します。
        ]]>
      </Description>
    </TagSetting>
    
    <TagSetting>
      <Raw><![CDATA[<%= this.SecurePageProtocolAndHost + Constants.PATH_ROOT + Constants.PAGE_FRONT_PASSWORD_REMINDER_INPUT %>]]></Raw>
      <Description>
        <![CDATA[
       パスワードリマインダページURLを出力します。
        ]]>
      </Description>
    </TagSetting>
    
    <TagSetting>
      <Raw><![CDATA[<%= Constants.PATH_ROOT + Constants.PAGE_FRONT_LOGOFF %>]]></Raw>
      <Description>
        <![CDATA[
       ログオフURLを出力します。
        ]]>
      </Description>
    </TagSetting>
    
    <TagSetting>
      <Raw><![CDATA[<%= Constants.PATH_ROOT + Constants.PAGE_FRONT_MYPAGE %>]]></Raw>
      <Description>
        <![CDATA[
       マイページURLを出力します。
        ]]>
      </Description>
    </TagSetting>
    
    <TagSetting>
      <Raw><![CDATA[<%= Constants.PATH_ROOT + Constants.PAGE_FRONT_CART_LIST %>]]></Raw>
      <Description>
        <![CDATA[
       カートページURLを出力します。
        ]]>
      </Description>
    </TagSetting>
    
    <TagSetting>
      <Raw><![CDATA[<%= this.SecurePageProtocolAndHost + Constants.PATH_ROOT + Constants.PAGE_FRONT_INQUIRY_INPUT %>]]></Raw>
      <Description>
        <![CDATA[
       問い合わせページURLを出力します。
        ]]>
      </Description>
    </TagSetting>

    <!--－－－－－－－－－－－－－－－－－－－－－－－－－-->
    <!--オプション系 -->
    <!--－－－－－－－－－－－－－－－－－－－－－－－－－-->
    <TagSetting>
      <RawBgn>
        <![CDATA[<%-- ▽ポイントオプション利用時▽ --%>
<%if (Constants.W2MP_POINT_OPTION_ENABLED) {%>]]>
      </RawBgn>
      <RawEnd>
        <![CDATA[<%} %>
<%-- △ポイントオプション利用時△ --%>]]>
      </RawEnd>
      <Description>
        <![CDATA[
        返品特約ページURLが設定されているときに表示する領域を指定します。
        ]]>
      </Description>
    </TagSetting>

    <!--－－－－－－－－－－－－－－－－－－－－－－－－－-->
    <!--ブランド系 -->
    <!--－－－－－－－－－－－－－－－－－－－－－－－－－-->
    <TagSetting>
      <Raw><![CDATA[<%= this.BrandId %>]]></Raw>
      <Description>
        <![CDATA[
       ブランドID出力します。
        ]]>
      </Description>
    </TagSetting>

    <TagSetting>
      <Raw><![CDATA[<%= this.BrandName %>]]></Raw>
      <Description>
        <![CDATA[
       ブランド名を出力します。
        ]]>
      </Description>
    </TagSetting>

    <TagSetting>
      <Raw><![CDATA[<%= this.BrandTitle %>]]></Raw>
      <Description>
        <![CDATA[
       ブランドタイトルを出力します。
        ]]>
      </Description>
    </TagSetting>

    <TagSetting>
      <Raw><![CDATA[<%= this.BrandSeoKeyword %>]]></Raw>
      <Description>
        <![CDATA[
       ブランドSEOキーワードを出力します。
        ]]>
      </Description>
    </TagSetting>

    <TagSetting>
      <Raw><![CDATA[<%= this.BrandAdditionalDsignTag %>]]></Raw>
      <Description>
        <![CDATA[
       ブランド追加デザインタグを出力します。
        ]]>
      </Description>
    </TagSetting>

    <!-- SNS -->
    <TagSetting>
      <Raw>
  <![CDATA[<iframe src="//www.facebook.com/plugins/like.php?href=[サイトURL]&amp;send=false&amp;layout=button_count&amp;width=450&amp;show_faces=false &amp;action=like&amp;colorscheme=light&amp;font=tahoma&amp;height=21" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:100px; height:21px;" allowTransparency="true"></iframe>]]></Raw>
      <Description>
        <![CDATA[
       FaceBookの「いいね」ボタンを表示します。
       [サイトURL]はURLパラメータ含めて一意になる必要があります。（カウントはサイトURLに対し行われます）
       また、エンコードした値を設定する必要があります。
        ]]>
      </Description>
    </TagSetting>
    
    <TagSetting>
      <Raw>
        <![CDATA[<a href="https://twitter.com/share" class="twitter-share-button" data-count="none" data-lang="ja">ツイート</a><script type="text/javascript" src="https://platform.twitter.com/widgets.js"></script>]]>
      </Raw>
      <Description>
        <![CDATA[
       Twitterボタンを表示します。
        ]]>
      </Description>
    </TagSetting>
    
    <TagSetting>
      <Raw>
        <![CDATA[<a href="javascript:void(0);" onclick="window.open('http://mixi.jp/share.pl?u=[サイトURL]&k=[mixiチェックキー]','share',['width=632','height=456','location=yes','resizable=yes','toolbar=no','menubar=no','scrollbars=no','status=no'].join(','));"><img src="<%= Constants.PATH_ROOT %>Contents/ImagesPkg/mixi_bt_check_1.png" alt="mixiチェック" border="0" /></a>]]>
      </Raw>
      <Description>
        <![CDATA[
       mixiボタンを表示します。
       [サイトURL]はエンコードした値を設定する必要があります。
       [mixiチェックキー]はmixiデベロッパー登録で発行されたIDを設定する必要があります。
        ]]>
      </Description>
    </TagSetting>

    <TagSetting>
      <Raw>
        <![CDATA[<meta property="og:title" content=''/>
<meta property="og:type" content='' />
<meta property="og:url" content='' />
<meta property="og:image" content='' />
<meta property="og:site_name" content='' />
<meta property="fb:admins" content=''/>
<meta property="og:description" content='' />
<meta property="og:email" content='' />
<meta property="og:phone_number " content='' />]]>
      </Raw>
      <Description>
        <![CDATA[
Open Graph ProtocolのタグはHead部に記述する必要があります。指定しない場合はページ内他情報で補完されます。
※タグはSNS連携時に利用します。]]>
      </Description>
    </TagSetting>
   
  </PageSetting>

</Design_Common>