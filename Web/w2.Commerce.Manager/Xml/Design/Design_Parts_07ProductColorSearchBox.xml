<Design_Parts>

  <!--－－－－－－－－－－－－－－－－－－－－－－－－－-->
  <!-- カラー検索 -->
  <!--－－－－－－－－－－－－－－－－－－－－－－－－－-->
  <PartsSetting name="カラー検索" path="Form\Common\Product\ProductColorSearchBox.ascx">
    <Declaration><![CDATA[<%@ Register TagPrefix="uc" TagName="ProductColorSearchBox" Src="~/Form/Common/Product/ProductColorSearchBox.ascx" %>]]></Declaration>
    <LayoutParts>
      <Name><![CDATA[カラー検索表示]]></Name>
      <Value><![CDATA[<uc:ProductColorSearchBox runat="server" />]]></Value>
    </LayoutParts>
    <TagSetting>
      <RawBgn><![CDATA[<asp:LinkButton ID="lbSearch" runat="server" OnClick="lbSearch_Click" data-color="(カラーID)">]]></RawBgn>
      <RawEnd><![CDATA[</asp:LinkButton>]]></RawEnd>
      <Description>
        <![CDATA[
        カラーによる商品検索リンクを表示します。
        data-color="(カラーID)" には検索するカラーのIDを入れてください。
        使用例：
        <asp:LinkButton ID="lbSearch" runat="server" OnClick="lbSearch_Click" data-color="<%#: Item.Id  %>/asp:LinkButton>
        ]]>
      </Description>
    </TagSetting>
    <TagSetting>
      <Raw><![CDATA[<%#: Item.Id %>]]></Raw>
      <Description>
        <![CDATA[
        rColorSearchリピーターの中で使うとカラーIDを表示します。
        使用例：
        <asp:LinkButton ID="lbSearch" runat="server" OnClick="lbSearch_Click" data-color="<%#: Item.Id %>/asp:LinkButton>
        ]]>
      </Description>
    </TagSetting>
    <TagSetting>
      <Raw><![CDATA[<%#: Item.DispName %>]]></Raw>
      <Description>
        <![CDATA[
        rColorSearchリピーターの中で使うとカラー表示名を表示します。
        ]]>
      </Description>
    </TagSetting>
    <TagSetting>
      <Raw><![CDATA[<%#: Item.Filename %>]]></Raw>
      <Description>
        <![CDATA[
        rColorSearchリピーターの中で使うとカラーのファイル名を表示します。
        ]]>
      </Description>
    </TagSetting>
    <TagSetting>
      <Raw><![CDATA[<%#: Item.Url %>]]></Raw>
      <Description>
        <![CDATA[
        rColorSearchリピーターの中で使うとカラーファイルのパスを表示します。
        ]]>
      </Description>
    </TagSetting>

  </PartsSetting>

</Design_Parts>