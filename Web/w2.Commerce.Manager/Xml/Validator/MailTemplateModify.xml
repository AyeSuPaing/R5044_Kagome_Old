<MailTemplateModify>
  <Column name="mail_name">
    <name>メールテンプレート名</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max>50</length_max>
    <length_min></length_min>
    <duplication page="MailTemplate" statement="CheckDuplicationMailNameModify">1</duplication>
  </Column>
  <Column name="mail_from">
    <name>送信元メールアドレス</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max>256</length_max>
    <length_min></length_min>
  </Column>
  <Column name="mail_from_name">
    <name>送信元名</name>
    <length_max>50</length_max>
  </Column>
  <Column name="mail_to">
    <name>送信先メールアドレス</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max>1000</length_max>
    <length_min></length_min>
  </Column>
  <Column name="mail_cc">
    <name>Ccメールアドレス</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max>1000</length_max>
    <length_min></length_min>
  </Column>
  <Column name="mail_bcc">
    <name>Bccメールアドレス</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max>1000</length_max>
    <length_min></length_min>
  </Column>
  <Column name="mail_subject">
    <name>メール件名</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max>500</length_max>
    <length_min></length_min>
  </Column>
  <Column name="mail_subject_mobile">
    <name>メール件名(モバイル)</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max>500</length_max>
    <length_min></length_min>
  </Column>
</MailTemplateModify>