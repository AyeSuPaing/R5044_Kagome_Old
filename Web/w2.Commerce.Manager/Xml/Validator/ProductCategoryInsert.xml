<ProductCategoryInsert>
  <Column name="shop_id">
    <name>店舗ID</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_ALPHNUM</type>
    <length></length>
    <length_max>10</length_max>
    <length_min>1</length_min>
  </Column>
  <Column name="category_id_length">
    <name>カテゴリID</name>
    <necessary></necessary>
    <type></type>
    <length>3</length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="category_id">
    <name>カテゴリID</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_ALPHNUM</type>
    <length></length>
    <length_max>30</length_max>
    <length_min></length_min>
    <duplication page="ProductCategory" statement="CheckDuplicationInsertCategoryId">1</duplication>
  </Column>
  <Column name="parent_category_id">
    <name>親カテゴリID</name>
    <necessary></necessary>
    <type>HALFWIDTH_ALPHNUM</type>
    <length></length>
    <length_max>30</length_max>
    <length_min></length_min>
  </Column>
  <Column name="name">
    <name>カテゴリ名</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max>40</length_max>
    <length_min>1</length_min>
  </Column>
  <Column name="name_mobile">
    <name>モバイル用カテゴリ名</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max>40</length_max>
    <length_min></length_min>
  </Column>
  <Column name="permitted_brand_ids">
    <name>許可ブランドID</name>
    <necessary></necessary>
    <type>HALFWIDTH_ALPHNUMSYMBOL</type>
    <length></length>
    <length_max>300</length_max>
    <length_min></length_min>
  </Column>
  <Column name="seo_keywords">
    <name>SEOキーワード</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max>200</length_max>
    <length_min></length_min>
  </Column>
  <Column name="canonical_text">
    <name>カノニカルタグ用テキスト</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max>100</length_max>
    <length_min></length_min>
    <regexp ptn="半角英数字、「-」、「_」">^[a-zA-Z0-9-_]+$</regexp>
  </Column>
  <Column name="url">
    <name>紹介URL</name>
    <necessary></necessary>
    <type>HALFWIDTH_ALPHNUMSYMBOL</type>
    <length></length>
    <length_max>256</length_max>
    <length_min></length_min>
  </Column>
  <Column name="display_order">
    <name>表示順</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <length_max>3</length_max>
    <length_min></length_min>
  </Column>
  <Column name="name_kana">
    <name>カテゴリ名 (フリガナ)</name>
    <necessary></necessary>
    <type>FULLWIDTH_KATAKANA</type>
    <length></length>
    <length_max>60</length_max>
    <length_min></length_min>
  </Column>
  <Column name="child_category_sort_kbn">
    <name>子カテゴリの並び順</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_ALPHNUM</type>
    <length></length>
    <length_max>2</length_max>
    <length_min></length_min>
  </Column>
</ProductCategoryInsert>