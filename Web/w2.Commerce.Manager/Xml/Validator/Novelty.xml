<Novelty>
  <!--- ノベルティ設定 -->
  <Column name="novelty_id">
    <name>ノベルティID</name>
    <necessary>1</necessary>
    <length_max>30</length_max>
    <regexp ptn="半角英数字、「_」、「-」、「(」、「)」、「#」">^[a-zA-Z0-9_\-\(\)#]+$</regexp>
  </Column>
  <Column name="novelty_disp_name">
    <name>ノベルティ名（表示用）</name>
    <necessary>1</necessary>
    <length_max>100</length_max>
  </Column>
  <Column name="novelty_name">
    <name>ノベルティ名（管理用）</name>
    <necessary>1</necessary>
    <length_max>100</length_max>
  </Column>
  <Column name="date_begin">
    <name>開始日時</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_DATE</type>
  </Column>
  <Column name="date_end">
    <name>終了日時</name>
    <type>HALFWIDTH_DATE</type>
  </Column>
  <!--- ノベルティ対象アイテム -->
  <Column name="BRAND">
    <name>ブランドID [ @@ 1 @@ ] </name>
    <type>HALFWIDTH_ALPHNUMSYMBOL</type>
    <length_max>30</length_max>
  </Column>
  <Column name="CATEGORY">
    <name>カテゴリID [ @@ 1 @@ ] </name>
    <type>HALFWIDTH_ALPHNUM</type>
    <length_max>30</length_max>
  </Column>
  <Column name="PRODUCT">
    <name>商品ID [ @@ 1 @@ ] </name>
    <regexp ptn="半角英数字、「_」、「-」、「(」、「)」、「#」">^[a-zA-Z0-9_\-\(\)#]+$</regexp>
    <length_max>30</length_max>
  </Column>
  <Column name="VARIATION">
    <name>バリエーションID [ @@ 1 @@ ] </name>
    <regexp ptn="半角英数字、「_」、「-」、「(」、「)」、「#」">^[a-zA-Z0-9_\-\(\)#]+$</regexp>
    <length_max>60</length_max>
  </Column>
  <!--- ノベルティ付与条件 -->
  <Column name="amount_begin">
    <name>対象金額（以上）</name>
    <necessary>1</necessary>
    <type>CURRENCY</type>
    <currency_localeId>@@Global.key_currency.localeId@@</currency_localeId>
    <currency_decimal_digits>@@Global.key_currency.currencyDecimalDigits@@</currency_decimal_digits>
    <length></length>
    <number_max>@@Global.key_currency.max@@</number_max>
    <number_min>0</number_min>
  </Column>
  <Column name="amount_end">
    <name>対象金額（未満）</name>
    <type>CURRENCY</type>
    <currency_localeId>@@Global.key_currency.localeId@@</currency_localeId>
    <currency_decimal_digits>@@Global.key_currency.currencyDecimalDigits@@</currency_decimal_digits>
    <length></length>
    <number_max>@@Global.key_currency.max@@</number_max>
    <number_min>0</number_min>
  </Column>
  <!--- ノベルティ付与アイテム -->
  <Column name="grant_item_product_id">
    <name>商品ID [ @@ 1 @@ ] </name>
    <regexp ptn="半角英数字、「_」、「-」、「(」、「)」、「#」">^[a-zA-Z0-9_\-\(\)#]+$</regexp>
    <length_max>30</length_max>
  </Column>
  <Column name="grant_item_product_id_necessary">
    <name>商品ID</name>
    <necessary>1</necessary>
  </Column>
</Novelty>