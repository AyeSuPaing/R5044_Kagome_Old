<TwInvoice>
  <Column name="tw_invoice_name" control="tbInvoiceName">
    <name>電子発票情報名</name>
    <necessary>1</necessary>
    <length_max>30</length_max>
  </Column>
  <Column name="tw_uniform_invoice" control="ddlTwUniformInvoice">
    <name>發票種類</name>
    <necessary>1</necessary>
    <length_max>10</length_max>
  </Column>
  <Column name="tw_carry_type" control="ddlTwCarryType">
    <name>共通性載具</name>
    <length_max>16</length_max>
  </Column>
  <Column name="tw_carry_type_option_8" control="tbCarryTypeOption_8">
    <name>携帯載具コード</name>
    <necessary>1</necessary>
  </Column>
  <Column name="tw_carry_type_option_16" control="tbCarryTypeOption_16">
    <name>自然人証明コード</name>
    <necessary>1</necessary>
  </Column>
  <Column name="tw_uniform_invoice_option1_3" control="tbUniformInvoiceOption1_3">
    <name>寄付先コード</name>
    <necessary>1</necessary>
    <regexp ptn="3桁から7桁の数字のみ入力可能">^[0-9]{3,7}$</regexp>
  </Column>
  <Column name="tw_uniform_invoice_option1_8" control="tbUniformInvoiceOption1_8">
    <name>統一編号</name>
    <necessary>1</necessary>
    <regexp ptn="8桁の数字のみ入力可能">^[0-9]{8}$</regexp>
  </Column>
  <Column name="tw_uniform_invoice_option2" control="tbUniformInvoiceOption2">
    <name>会社名</name>
    <necessary>1</necessary>
    <length_max>20</length_max>
  </Column>
  <Column name="tw_invoice_alert_count" control="tbUpdate">
    <name>アラートメール送信設定値</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
  </Column>
</TwInvoice>