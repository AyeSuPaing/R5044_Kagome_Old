<UserCreditCardRegist>

  <!-- クレジット共通-->
  <Column name="credit_card_no">
    <name>カード情報</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max>16</length_max>
    <length_min></length_min>
  </Column>
  <Column name="credit_card_no_length">
    <name>カード番号</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max>16</length_max>
    <length_min>14</length_min>
  </Column>
  <Column name="credit_expire_month">
    <name>有効期限(月)</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="credit_expire_year">
    <name>有効期限(年)</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="credit_author_name" control="tbCreditAuthorName">
    <name>カード名義人</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max>50</length_max>
    <length_min></length_min>
    <regexp ptn="半角英字">^[a-zA-Z ]+$</regexp>
  </Column>
  <Column name="credit_security_code" control="tbCreditSecurityCode">
    <name>セキュリティコード</name>
    <necessary></necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <length_max>4</length_max>
    <length_min>3</length_min>
  </Column>

  <!-- クレジットカード登録名(表示用) -->
  <Column name="regist_credit_card_name" control="tbUserCreditCardName">
    <name>クレジットカード登録名</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max>100</length_max>
    <length_min></length_min>
  </Column>

</UserCreditCardRegist>