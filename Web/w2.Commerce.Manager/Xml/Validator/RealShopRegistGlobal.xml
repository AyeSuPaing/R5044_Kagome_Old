<RealShopRegistGlobal>
  <Column name="real_shop_id">
    <name>リアル店舗ID</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max>30</length_max>
    <length_min></length_min>
    <duplication page="RealShop" statement="CheckDuplicationInsertRealShopId">1</duplication>
  </Column>
  <Column name="name">
    <name>店舗名</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max>100</length_max>
    <length_min></length_min>
  </Column>
  <Column name="name_kana">
    <name>店舗名かな</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max>200</length_max>
    <length_min></length_min>
  </Column>
  <Column name="zip">
    <name>@@User.zip.globalAddress.name@@</name>
    <necessary></necessary>
    <type>HALFWIDTH</type>
    <length></length>
    <length_max>20</length_max>
    <length_min></length_min>
  </Column>
  <Column name="addr2">
    <name>@@User.addr2.globalAddress.name@@</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max>100</length_max>
    <length_min></length_min>
  </Column>
  <Column name="addr3">
    <name>@@User.addr3.globalAddress.name@@</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max>100</length_max>
    <length_min></length_min>
  </Column>
  <Column name="addr4">
    <name>@@User.addr4.globalAddress.name@@</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max>100</length_max>
    <length_min></length_min>
  </Column>
  <Column name="addr5">
    <name>@@User.addr5.globalAddress.name@@</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max>100</length_max>
    <length_min></length_min>
  </Column>
  <Column name="tel">
    <name>@@User.tel1.globalAddress.name@@</name>
    <necessary></necessary>
    <type>HALFWIDTH</type>
    <length></length>
    <length_max>30</length_max>
    <length_min></length_min>
  </Column>
  <Column name="fax">
    <name>FAX</name>
    <necessary></necessary>
    <type>HALFWIDTH</type>
    <length></length>
    <length_max>30</length_max>
    <length_min></length_min>
  </Column>
  <Column name="display_order">
    <name>表示順</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="mail_addr">
    <name>メールアドレス</name>
    <necessary></necessary>
    <type>MAILADDRESS</type>
    <length></length>
    <length_max>256</length_max>
    <length_min></length_min>
  </Column>
  <Column name="mail_addr_store_pick_up_valid">
    <name>メールアドレス</name>
    <necessary>1</necessary>
    <type>MAILADDRESS</type>
    <length_max>256</length_max>
  </Column>
  <Column name="url">
    <name>URL</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
    <regexp ptn=""><![CDATA[^(s?https?://|/)[-_.!~*'()a-zA-Z0-9;/?:@&=+$,%#]+$]]></regexp>
  </Column>
  <Column name="area_id">
    <name>地域</name>
    <necessary>1</necessary>
  </Column>
  <Column name="brand_id">
    <name>ブランド</name>
  </Column>
  <Column name="longitude">
    <name>経度</name>
    <type>HALFWIDTH_DECIMAL</type>
    <regexp ptn=""><![CDATA[^(\d{1,3})\.(\d{1,6})$]]></regexp>
  </Column>
  <Column name="latitude">
    <name>緯度</name>
    <type>HALFWIDTH_DECIMAL</type>
    <regexp ptn=""><![CDATA[^(\d{1,3})\.(\d{1,6})$]]></regexp>
  </Column>
</RealShopRegistGlobal>