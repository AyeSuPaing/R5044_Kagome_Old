<OrderModifyInput>
  <!-- 注文情報 -->
  <Column name="order_payment_kbn">
    <name>決済種別</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_ALPHNUMSYMBOL</type>
    <length></length>
    <length_max>10</length_max>
    <length_min></length_min>    
  </Column>
  <Column name="memo">
    <name>注文メモ</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="payment_memo">
    <name>決済連携メモ</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="management_memo">
    <name>管理メモ</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="return_exchange_reason_memo">
    <name>返品交換理由メモ</name>
    <type></type>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="repayment_memo">
    <name>返金メモ</name>
    <type></type>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="advcode_first">
    <name>広告コード（初回分）</name>
    <type>HALFWIDTH_ALPHNUMSYMBOL</type>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max>30</length_max>
    <length_min></length_min>
  </Column>
  <Column name="advcode_new">
    <name>広告コード（最新分）</name>
    <type>HALFWIDTH_ALPHNUMSYMBOL</type>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max>30</length_max>
    <length_min></length_min>
  </Column>
  <Column name="payment_order_id">
    <name>決済注文ID</name>
    <necessary></necessary>
    <type>HALFWIDTH_ALPHNUMSYMBOL</type>
    <length></length>
    <length_max>50</length_max>
    <length_min></length_min>
  </Column>
  <Column name="tw_carry_type_option_1" control="tbCarryTypeOption1">
    <name>携帯載具コード</name>
    <regexp ptn="先頭が/の8桁の大文字英数字または記号+-.の組み合わせ">^/[A-Z|0-9|+-.]{7}$</regexp>
    <necessary>1</necessary>
  </Column>
  <Column name="tw_carry_type_option_2" control="tbCarryTypeOption2">
    <name>自然人証明コード</name>
    <regexp ptn="先頭2桁は英字大文字、残り14桁は数字">^[A-Z]{2}[0-9]{14}$</regexp>
    <necessary>1</necessary>
  </Column>
  <Column name="tw_uniform_invoice_option1" control="tbCompanyOption1">
    <name>統一編号</name>
    <necessary>1</necessary>
    <regexp ptn="8桁の数字のみ入力可能">^[0-9]{8}$</regexp>
  </Column>
  <Column name="tw_uniform_invoice_option2" control="tbCompanyOption2">
    <name>会社名</name>
    <length_max>20</length_max>
    <necessary>1</necessary>
  </Column>
  <Column name="tw_uniform_invoice_option1_donate" control="tbDonateOption1">
    <name>寄付先コード</name>
    <necessary>1</necessary>
    <regexp ptn="3桁から7桁の数字のみ入力可能">^[0-9]{3,7}$</regexp>
  </Column>
</OrderModifyInput>