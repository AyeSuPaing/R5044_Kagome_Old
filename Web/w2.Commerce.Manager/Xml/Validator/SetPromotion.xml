<SetPromotion>
  <Column name="setpromotion_id">
    <name>セットプロモーションID</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max>10</length_max>
    <length_min></length_min>
    <regexp ptn="半角英数字、「_」、「-」、「(」、「)」、「#」">^[a-zA-Z0-9_\-\(\)#]+$</regexp>
  </Column>
  <Column name="setpromotion_name">
    <name>セットプロモーション名(管理用)</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max>30</length_max>
    <length_min></length_min>
  </Column>
  <Column name="setpromotion_disp_name">
    <name>セットプロモーション名(サイト表示用)</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max>30</length_max>
    <length_min></length_min>
  </Column>
  <Column name="setpromotion_disp_name_mobile">
    <name>セットプロモーション名(モバイル表示用)</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max>30</length_max>
    <length_min></length_min>
  </Column>
  <Column name="product_discount_kbn_check">
    <name>商品割引方法</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="product_discount_setting_discounted_price">
    <name>割引後の金額指定</name>
    <necessary>1</necessary>
    <type>CURRENCY</type>
    <currency_localeId>@@Global.key_currency.localeId@@</currency_localeId>
    <currency_decimal_digits>@@Global.key_currency.currencyDecimalDigits@@</currency_decimal_digits>
    <length></length>
    <number_max>@@Global.key_currency.max@@</number_max>
    <number_min>0</number_min>
  </Column>
  <Column name="product_discount_setting_discount_price">
    <name>商品割引額</name>
    <necessary>1</necessary>
    <type>CURRENCY</type>
    <currency_localeId>@@Global.key_currency.localeId@@</currency_localeId>
    <currency_decimal_digits>@@Global.key_currency.currencyDecimalDigits@@</currency_decimal_digits>
    <length></length>
    <number_max>@@Global.key_currency.max@@</number_max>
    <number_min>0</number_min>
  </Column>
  <Column name="product_discount_setting_discount_rate">
    <name>商品割引率</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <number_max>100</number_max>
    <number_min>0</number_min>
  </Column>
  <Column name="description_kbn">
    <name>表示文言HTML区分</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <length_max>1</length_max>
    <length_min></length_min>
  </Column>
  <Column name="description_kbn">
    <name>表示文言(モバイル)HTML区分</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <length_max>1</length_max>
    <length_min></length_min>
  </Column>
  <Column name="begin_date">
    <name>開始日時</name>
    <necessary>1</necessary>
    <type>DATE</type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="end_date">
    <name>終了日時</name>
    <necessary></necessary>
    <type>DATE</type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="url">
    <name>URL</name>
    <necessary></necessary>
    <type>HALFWIDTH_ALPHNUMSYMBOL</type>
    <length></length>
    <length_max>256</length_max>
    <length_min></length_min>
  </Column>
  <Column name="url_mobile">
    <name>URL(モバイル)</name>
    <necessary></necessary>
    <type>HALFWIDTH_ALPHNUMSYMBOL</type>
    <length></length>
    <length_max>256</length_max>
    <length_min></length_min>
  </Column>
  <Column name="display_order">
    <name>表示優先順</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
    <number_min>1</number_min>
  </Column>
  <Column name="apply_order">
    <name>適用優先順</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <length_max>7</length_max>
    <length_min></length_min>
    <number_min>1</number_min>
  </Column>
</SetPromotion>