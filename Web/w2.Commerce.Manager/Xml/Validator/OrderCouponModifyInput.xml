<OrderCouponModifyInput>
  <!-- 注文クーポン情報 -->
  <Column name="coupon_code">
    <name>クーポンコード</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max>30</length_max>
    <length_min></length_min>
  </Column>
  <Column name="order_coupon_use">
    <name>クーポン割引額</name>
    <necessary>1</necessary>
    <type>CURRENCY</type>
    <currency_localeId>@@Global.key_currency.localeId@@</currency_localeId>
    <currency_decimal_digits>@@Global.key_currency.currencyDecimalDigits@@</currency_decimal_digits>
    <length></length>
    <number_max>@@Global.key_currency.max@@</number_max>
    <number_min>0</number_min>
  </Column>
  <Column name="coupon_disp_name">
    <name>クーポン名(ユーザ表示用)</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max>30</length_max>
    <length_min></length_min>
  </Column>
  <Column name="coupon_name">
    <name>クーポン名(管理用)</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max>30</length_max>
    <length_min></length_min>    
  </Column>
</OrderCouponModifyInput>