<ProductSearch>
  <Column name="pi">
    <name>商品ID</name>
    <length_max>30</length_max>
    <regexp ptn="半角英数字、「_」、「-」、「(」、「)」、「#」">^[a-zA-Z0-9_\-\(\)#]+$</regexp>
  </Column>
  <Column name="pn">
    <name>商品名</name>
    <length_max>100</length_max>
  </Column>
  <Column name="psi">
    <name>サプライヤID</name>
    <type>HALFWIDTH_ALPHNUMSYMBOL</type>
    <length_max>20</length_max>
  </Column>
  <Column name="pci1">
    <name>商品連携ID1</name>
    <length_max>30</length_max>
  </Column>
  <Column name="pci2">
    <name>商品連携ID2</name>
    <length_max>30</length_max>
  </Column>
  <Column name="pci3">
    <name>商品連携ID3</name>
    <length_max>30</length_max>
  </Column>
  <Column name="pci4">
    <name>商品連携ID4</name>
    <length_max>30</length_max>
  </Column>
  <Column name="pci5">
    <name>商品連携ID5</name>
    <length_max>30</length_max>
  </Column>
  <Column name="pci">
    <name>カテゴリID</name>
    <type>HALFWIDTH_ALPHNUMSYMBOL</type>
    <length_max>30</length_max>
  </Column>
  <Column name="bid">
    <name>ブランドID</name>
    <length_max>30</length_max>
  </Column>
  <Column name="dp">
    <name>表示優先順</name>
    <type>HALFWIDTH_NUMBER</type>
  </Column>
</ProductSearch>
