<Recommend>
  <!--- レコメンド設定 -->
  <Column name="recommend_id">
    <name>レコメンドID</name>
    <necessary>1</necessary>
    <length_max>30</length_max>
    <regexp ptn="半角英数字、「_」、「-」、「(」、「)」、「#」">^[a-zA-Z0-9_\-\(\)#]+$</regexp>
  </Column>
  <Column name="recommend_name">
    <name>レコメンド名（管理用）</name>
    <necessary>1</necessary>
    <length_max>100</length_max>
  </Column>
  <Column name="date_begin">
    <name>開始日時</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_DATE</type>
  </Column>
  <Column name="date_end">
    <name>終了日時</name>
    <type>HALFWIDTH_DATE</type>
  </Column>
  <Column name="priority">
    <name>適用優先順</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <number_max>9999999</number_max>
    <number_min>1</number_min>
  </Column>
  <!--- レコメンド適用条件アイテム -->
  <Column name="product_id">
    <name>商品ID [ @@ 1 @@ ] </name>
    <regexp ptn="半角英数字、「_」、「-」、「(」、「)」、「#」">^[a-zA-Z0-9_\-\(\)#]+$</regexp>
    <length_max>30</length_max>
  </Column>
  <Column name="variation_id">
    <name>バリエーションID [ @@ 1 @@ ] </name>
    <regexp ptn="半角英数字、「_」、「-」、「(」、「)」、「#」">^[a-zA-Z0-9_\-\(\)#]+$</regexp>
    <length_max>60</length_max>
  </Column>
  <!--- レコメンドアップセル対象アイテム -->
  <Column name="exists_upsell_target_item">
    <name>アップセル対象商品</name>
    <necessary>1</necessary>
  </Column>
  <!--- レコメンドアイテム -->
  <Column name="recommend_item_add_quantity">
    <name>数量</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <number_max>9999999</number_max>
    <number_min>1</number_min>
  </Column>
</Recommend>