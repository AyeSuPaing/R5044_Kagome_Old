<ProductFixedPurchaseDiscountSettingRegist>
  <Column name="order_count">
    <name>@@ RowNo @@購入回数</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <number_min>1</number_min>
    <number_max></number_max>
  </Column>
  <Column name="product_count">
    <name>@@ ColNo @@商品個数</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <number_min>1</number_min>
    <number_max></number_max>
  </Column>
  <Column name="discount_value_price">
    <name>@@ ColNoRowNo @@値引き</name>
    <necessary></necessary>
    <type>CURRENCY</type>
    <currency_localeId>@@Global.key_currency.localeId@@</currency_localeId>
    <currency_decimal_digits>@@Global.key_currency.currencyDecimalDigits@@</currency_decimal_digits>
    <length></length>
    <number_max>@@Global.key_currency.max@@</number_max>
    <number_min>0</number_min>
  </Column>
  <Column name="discount_value_percent">
    <name>@@ ColNoRowNo @@値引き</name>
    <necessary></necessary>
    <type>HALFWIDTH_DECIMAL</type>
    <length></length>
  </Column>
  <Column name="point_value">
    <name>@@ ColNoRowNo @@付与ポイント</name>
    <necessary></necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <number_min>0</number_min>
    <number_max></number_max>
  </Column>
</ProductFixedPurchaseDiscountSettingRegist>