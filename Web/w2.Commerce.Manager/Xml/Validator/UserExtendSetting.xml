<UserExtendSetting>
  <Column name="setting_id">
    <name>[ @@ 1 @@ ] のID</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max>40</length_max>
    <length_min></length_min>
    <regexp ptn="半角英数字、「_」">^[a-zA-Z0-9_]+$</regexp>
  </Column>
  <Column name="setting_name">
    <name>[ @@ 1 @@ ] の項目名</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max>100</length_max>
    <length_min></length_min>
  </Column>
  <Column name="sort_order">
    <name>[ @@ 1 @@ ] の表示順</name>
    <necessary></necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <number_max>999</number_max>
    <number_min>0</number_min>
  </Column>
  <Column name="input_default_list">
    <name>[ @@ 1 @@ ] のリスト内容</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="input_default_text">
    <name>[ @@ 1 @@ ] の初期値</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <!-- 下記２つはListBox内のアイテム要素に利用(カラム内容全体に対しては行わない) -->
  <Column name="input_default_value">
    <name>表示名</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
    <prohibit>&lt;&gt;&amp;&quot;&apos;;,</prohibit>
  </Column>
  <Column name="input_default_key">
    <name>値</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
    <prohibit>&lt;&gt;&amp;&quot;&apos;;,</prohibit>
  </Column>
</UserExtendSetting>
