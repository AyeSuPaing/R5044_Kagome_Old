<ProductReviewModify>
  <Column name="date_opened">
    <name>公開日</name>
    <necessary></necessary>
    <type>HALFWIDTH_DATE</type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="date_checked">
    <name>チェック日</name>
    <necessary></necessary>
    <type>HALFWIDTH_DATE</type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="user_id">
    <name>ユーザID</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max>30</length_max>
    <length_min></length_min>
  </Column>
  <Column name="nick_name">
    <name>@@User.nickname.name@@</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max>20</length_max>
    <length_min></length_min>
    <except_regexp ptn="@@Etc.emoji.except_regexp_ptn@@">@@Etc.emoji.except_regexp@@</except_regexp>
  </Column>
  <Column name="review_title">
    <name>タイトル</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max>20</length_max>
    <length_min></length_min>
    <except_regexp ptn="@@Etc.emoji.except_regexp_ptn@@">@@Etc.emoji.except_regexp@@</except_regexp>
  </Column>
  <Column name="review_comment">
    <name>コメント</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max>800</length_max>
    <length_min></length_min>
    <except_regexp ptn="@@Etc.emoji.except_regexp_ptn@@">@@Etc.emoji.except_regexp@@</except_regexp>
  </Column>
</ProductReviewModify>