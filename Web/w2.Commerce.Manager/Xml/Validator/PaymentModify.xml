<PaymentModify>
  <Column name="payment_name">
    <name>決済種別名</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max>20</length_max>
  </Column>
  <Column name="payment_name_mobile">
    <name>モバイル用決済種別名</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max>20</length_max>
  </Column>
  <Column name="usable_price_min">
    <name>金額下限</name>
    <necessary></necessary>
    <type>CURRENCY</type>
    <currency_localeId>@@Global.key_currency.localeId@@</currency_localeId>
    <currency_decimal_digits>@@Global.key_currency.currencyDecimalDigits@@</currency_decimal_digits>
    <length></length>
    <number_max>@@Global.key_currency.max@@</number_max>
    <number_min>0</number_min>
  </Column>
  <Column name="usable_price_max">
    <name>金額上限</name>
    <necessary></necessary>
    <type>CURRENCY</type>
    <currency_localeId>@@Global.key_currency.localeId@@</currency_localeId>
    <currency_decimal_digits>@@Global.key_currency.currencyDecimalDigits@@</currency_decimal_digits>
    <length></length>
    <number_max>@@Global.key_currency.max@@</number_max>
    <number_min>0</number_min>
  </Column>
  <Column name="payment_price_kbn">
    <name>手数料区分</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length>1</length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="display_order">
    <name>表示順</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <number_max>999</number_max>
    <number_min>1</number_min>
  </Column>
</PaymentModify>