@using w2.App.Common.Web.Page
@using w2.Cms.Manager.Codes
@{
	ViewBag.Title = CommonPage.ReplaceTag("@@ScoringSaleQuestion.information_title.name@@");
	Layout = Constants.LAYOUT_PATH_DEFAULT;
}

<h1 class="page-title">@CommonPage.ReplaceTag("@@ScoringSaleQuestion.information_title.name@@")</h1>
<div class="main-content-frame" id="list-content">
</div>

@section JavaScript
{
	<script type="text/javascript">
		get_list();

		// Get list
		function get_list() {
			loading_animation.start();
			$.ajax({
				type: "POST",
				url: "@Url.Action("List", Constants.CONTROLLER_W2CMS_MANAGER_SCORING_SALE_QUESTION)",
				traditional: true
			}).done(function (viewHtml) {
				$("#list-content").html(viewHtml);
				loading_animation.end();
			});
		}

		// Image search
		function image_search() {
			var searchWord = $('#image_keyword').val();

			$.ajax({
				url: "@Url.Action("ImageSearch", Constants.CONTROLLER_W2CMS_MANAGER_SCORING_SALE_QUESTION)",
				type: 'POST',
				data: {
					searchWord: searchWord,
				}
			}).done(function (viewHTML) {
				$('#image-list-content').html(viewHTML);
			});
		}
	</script>
}
