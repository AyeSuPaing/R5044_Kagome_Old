@model w2.Cms.Manager.ViewModels.Shared.DateTimeInputModel

@{
	var parentName = Model.BaseName + ".";
}

@Html.DropDownListFor(model => model.Year, new SelectList(Model.YearItems, "Value", "Text"), new
{
	Name = parentName + "Year"
}) /
@Html.DropDownListFor(model => model.Month, new SelectList(Model.MonthItems, "Value", "Text"), new
{
	Id = "Month",
	Name = parentName + "Month"
}) /
@Html.DropDownListFor(model => model.Day, new SelectList(Model.DayItems, "Value", "Text"), new
{
	Id = "Day",
	Name = parentName + "Day"
})

@Html.DropDownListFor(model => model.Hour, new SelectList(Model.HourItems, "Value", "Text"), new
{
	Id = "Hour",
	Name = parentName + "Hour"
}) :
@Html.DropDownListFor(model => model.Minute, new SelectList(Model.MinuteItems, "Value", "Text"), new
{
	Id = "Minute",
	Name = parentName + "Minute"
}) :
@Html.DropDownListFor(model => model.Second, new SelectList(Model.SecondItems, "Value", "Text"), new
{
	Id = "Second",
	Name = parentName + "Second"
})
