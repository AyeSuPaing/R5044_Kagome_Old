<CoordinateCategory>

  <!-- カテゴリID重複チェック -->
  <CheckDuplicationCategoryId>
    <Statement>
      <![CDATA[
        SELECT  COUNT(coordinate_category_id)
          FROM  w2_CoordinateCategory
         WHERE  w2_CoordinateCategory.coordinate_category_id = @coordinate_category_id
        ]]>
    </Statement>
    <Parameter>
      <Input Name="coordinate_category_id" Type="nvarchar" Size="30" />
    </Parameter>
  </CheckDuplicationCategoryId>

  <!-- カテゴリ名重複チェック -->
  <CheckDuplicationCategoryName>
    <Statement>
      <![CDATA[
        SELECT  COUNT(coordinate_category_name)
          FROM  w2_CoordinateCategory
         WHERE  w2_CoordinateCategory.coordinate_category_name = @coordinate_category_name
        ]]>
    </Statement>
    <Parameter>
      <Input Name="coordinate_category_name" Type="nvarchar" Size="40" />
    </Parameter>
  </CheckDuplicationCategoryName>

  <!-- 
    コーディネートカテゴリ情報取得(CSV出力用)
    「@@ fields @@」を指定フィールド列で置換してからステートメントを実行する
   -->
  <GetCoordinateCategoryMaster>
    <Statement>
      <![CDATA[
        SELECT  @@ fields @@
          FROM  w2_CoordinateCategory
                [[ COORDINATECATEGORY_SEARCH_WHERE ]]
      ]]>
    </Statement>
  </GetCoordinateCategoryMaster>

</CoordinateCategory>
