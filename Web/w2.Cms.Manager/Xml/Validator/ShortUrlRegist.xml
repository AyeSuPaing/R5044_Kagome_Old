<ShortUrlRegist>
  <Column name="short_url">
    <name>ショートURL</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_ALPHNUMSYMBOL</type>
    <length></length>
    <length_max>255</length_max>
    <length_min></length_min>
    <regexp ptn="正しいURL"><![CDATA[^(s?https?://|/)[-_.!~*'()a-zA-Z0-9;/?:@&=+$,%#]+$]]></regexp>
  </Column>
  <Column name="long_url">
    <name>ロングURL</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_ALPHNUMSYMBOL</type>
    <length></length>
    <length_max>2000</length_max>
    <length_min></length_min>
    <regexp ptn="正しいURL"><![CDATA[^(s?https?://|/)[-_.!~*'()a-zA-Z0-9;/?:@&=+$,%#]+$]]></regexp>
  </Column>
  <Column name="short_url_nec">
    <name>ショートURL</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="long_url_nec">
    <name>ロングURL</name>
    <necessary>1</necessary>
