    <PageSetting name="全ページ共通" path="" option="Common"></PageSetting>
    <PageSetting name="カートリスト" path="Form\Order\CartList.aspx"></PageSetting>
    <PageSetting name="ログイン後カート選択画面" path="Form\Order\CartSelect.aspx"></PageSetting>
