<Inquiry>
  <Column name="inquiry_title" control="ddlInquiryTitle">
    <name>問合せ件名</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="inquiry_text" control="tbInquiryText">
    <name>問合せ内容</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max>1000</length_max>
    <length_min></length_min>
  </Column>
  <Column name="name1" control="tbUserName1">
    <name>@@User.name1.name@@</name>
    <necessary>1</necessary>
    <type>@@User.name1.type@@</type>
    <length></length>
    <length_max>@@User.name1.length_max@@</length_max>
    <length_min></length_min>
  </Column>
  <Column name="name2" control="tbUserName2">
    <name>@@User.name2.name@@</name>
    <necessary>1</necessary>
    <type>@@User.name2.type@@</type>
    <length></length>
    <length_max>@@User.name2.length_max@@</length_max>
    <length_min></length_min>
  </Column>
  <Column name="name_kana1" control="tbUserNameKana1">
    <name>@@User.name_kana1.name@@</name>
    <necessary>1</necessary>
    <type>@@User.name_kana1.type@@</type>
    <length></length>
    <length_max>@@User.name_kana1.length_max@@</length_max>
    <length_min></length_min>
  </Column>
  <Column name="name_kana2" control="tbUserNameKana2">
    <name>@@User.name_kana2.name@@</name>
    <necessary>1</necessary>
    <type>@@User.name_kana2.type@@</type>
    <length></length>
    <length_max>@@User.name_kana2.length_max@@</length_max>
    <length_min></length_min>
  </Column>
  <Column name="mail_addr" control="tbUserMailAddr">
    <name>@@User.mail_addr.name@@</name>
    <necessary>1</necessary>
    <type>MAILADDRESS</type>
    <length></length>
    <length_max>256</length_max>
    <length_min></length_min>
    <confirm>mail_addr_conf</confirm>
  </Column>
  <Column name="mail_addr_conf" control="tbUserMailAddrConf">
    <name>@@User.mail_addr.name@@(確認用)</name>
    <necessary>1</necessary>
    <type>MAILADDRESS</type>
    <length></length>
    <length_max>256</length_max>
    <length_min></length_min>
  </Column>
  <Column name="tel1_1" control="tbUserTel1">
    <name>@@User.tel1.name@@(前)</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length_max>6</length_max>
  </Column>
  <Column name="tel1_2" control="tbUserTel2">
   <name>@@User.tel1.name@@(中)</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <length_max>4</length_max>
    <length_min></length_min>
  </Column>
  <Column name="tel1_3" control="tbUserTel3">
   <name>@@User.tel1.name@@(後)</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <length_max>4</length_max>
    <length_min></length_min>
  </Column>
  <Column name="tel1" control="tbTel1">
    <name>@@User.tel1.name@@</name>
    <necessary>1</necessary>
    <length_max>13</length_max>
    <except_regexp ptn="9 桁以下">(^([0-9](-|ｰ)?){1,9}$)</except_regexp>
    <regexp ptn="正しい形式">(^[0-9]{2,5}(-|ｰ)[0-9]{1,4}(-|ｰ)[0-9]{2,4}$)|^([0-9]{10,11}$)</regexp>
  </Column>
</Inquiry>
