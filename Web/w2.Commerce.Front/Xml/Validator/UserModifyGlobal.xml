    <necessary>@@User.addr2.globalAddress.necessary@@</necessary>
    <type>@@User.addr2.globalAddress.type@@</type>
    <length></length>
    <length_max>@@User.addr2.length_max@@</length_max>
    <length_min></length_min>
  </Column>
  <Column name="addr3" control="tbUserAddr3">
    <name>@@User.addr3.globalAddress.name@@</name>
