    <length_max>@@User.addr4.length_max@@</length_max>
    <length_min></length_min>
  </Column>
  <Column name="addr5" control="tbUserAddr5">
    <name>@@User.addr5.globalAddress.name@@</name>
    <necessary>@@User.addr5.globalAddress.necessary@@</necessary>
    <type>@@User.addr5.globalAddress.type@@</type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="addr5" control="ddlUserAddr5">
    <name>@@User.addr5.globalAddress.name@@</name>
    <necessary>@@User.addr5.globalAddress.necessary_ddl@@</necessary>
    <type>@@User.addr5.globalAddress.type@@</type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="tel1" control="tbUserTel1Global">
    <name>@@User.tel1.globalAddress.name@@</name>
    <necessary>1</necessary>
    <type>@@User.tel1.globalAddress.type@@</type>
    <length></length>
    <length_max>30</length_max>
    <length_min></length_min>
    <except_regexp ptn="9 桁以下">(^([0-9](-?)){1,9}$)</except_regexp>
    <regexp ptn="正しい形式">(^[0-9]{2,5}(-|ｰ)[0-9]{1,4}(-|ｰ)[0-9]{2,4}$)|^([0-9]{10,11}$)</regexp>
  </Column>
  <Column name="tel2" control="tbUserTel2Global">
    <name>@@User.tel2.globalAddress.name@@</name>
    <type>@@User.tel2.globalAddress.type@@</type>
    <length_max>30</length_max>
  </Column>
  <Column name="authentication_code" control="tbAuthenticationCodeGlobal">
    <name>@@User.authentication_code.name@@</name>
    <length_max>@@User.authentication_code.length_max@@</length_max>
  </Column>

