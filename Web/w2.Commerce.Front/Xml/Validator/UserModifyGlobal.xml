    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="birth_month" control="ddlUserBirthMonth">
    <name>@@User.birth.name@@(月)</name>
    <necessary>@@User.birth.necessary@@</necessary>
    <type>HALFWIDTH_NUMBER</type>
