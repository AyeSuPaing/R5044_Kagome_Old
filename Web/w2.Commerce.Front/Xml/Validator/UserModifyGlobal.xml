  </Column>
  <!-- 顧客区分に応じたメールアドレスの必須入力チェック用 -->
  <Column name="mail_addr_for_check">
    <name>@@User.mail_addr.name@@</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="mail_addr2_for_check">
    <name>@@User.mail_addr2.name@@</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <!-- 各メールアドレスの入力チェック用 -->
  <Column name="mail_addr" control="tbUserMailAddr">
    <name>@@User.mail_addr.name@@</name>
    <necessary>1</necessary>
    <type>@@User.mail_addr.type@@</type>
    <length></length>
    <length_max>256</length_max>
    <length_min></length_min>
    <confirm>mail_addr_conf</confirm>
  </Column>
  <Column name="mail_addr_conf" control="tbUserMailAddrConf">
    <name>@@User.mail_addr.name@@(確認用)</name>
    <necessary>1</necessary>
    <type>@@User.mail_addr.type@@</type>
    <length></length>
    <length_max>256</length_max>
    <length_min></length_min>
  </Column>
  <Column name="mail_addr2" control="tbUserMailAddr2">
    <name>@@User.mail_addr2.name@@</name>
