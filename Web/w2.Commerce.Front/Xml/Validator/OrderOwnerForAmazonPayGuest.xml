    <name>@@User.tel1.name@@</name>
    <necessary>1</necessary>
    <length_max>13</length_max>
    <except_regexp ptn="9 桁以下">(^([0-9](-|ｰ)?){1,9}$)</except_regexp>
    <regexp ptn="正しい形式">(^[0-9]{2,5}(-|ｰ)[0-9]{1,4}(-|ｰ)[0-9]{2,4}$)|^([0-9]{10,11}$)</regexp>
  </Column>
