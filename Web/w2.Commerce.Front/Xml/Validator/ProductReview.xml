<ProductReview>
  <Column name="nick_name" control="tbNickName">
    <name>@@User.nickname.name@@</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max>20</length_max>
    <length_min></length_min>
    <except_regexp ptn="@@Etc.emoji.except_regexp_ptn@@">@@Etc.emoji.except_regexp@@</except_regexp>
  </Column>
  <Column name="review_rating" control="ddlReviewRating">
    <name>評価</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <length_max>1</length_max>
    <length_min></length_min>
  </Column>
  <Column name="review_title" control="tbReviewTitle">
    <name>タイトル</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max>20</length_max>
    <length_min></length_min>
    <except_regexp ptn="@@Etc.emoji.except_regexp_ptn@@">@@Etc.emoji.except_regexp@@</except_regexp>
  </Column>
  <Column name="review_comment" control="tbReviewComment">
    <name>コメント</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max>800</length_max>
    <length_min></length_min>
    <except_regexp ptn="@@Etc.emoji.except_regexp_ptn@@">@@Etc.emoji.except_regexp@@</except_regexp>
  </Column>
</ProductReview>