<UserCreditCardRegist>

  <!-- クレジット共通-->
  <Column name="card">
    <name>カード番号</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <length_max>16</length_max>
    <length_min></length_min>
    <regexp ptn="先頭に「0」をつけない形式">^([^0].+|0{16})$</regexp>
  </Column>
  <Column name="credit_card_no1" control="tbCreditCardNo1">
    <name>カード番号</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length_max>16</length_max>
  </Column>
  <Column name="credit_card_no2" control="tbCreditCardNo2">
    <name>カード番号2</name>
    <type>HALFWIDTH_NUMBER</type>
    <length_max>6</length_max>
  </Column>
  <Column name="credit_card_no3" control="tbCreditCardNo3">
    <name>カード番号3</name>
    <type>HALFWIDTH_NUMBER</type>
    <length_max>5</length_max>
  </Column>
  <Column name="credit_card_no4" control="tbCreditCardNo4">
    <name>カード番号4</name>
    <type>HALFWIDTH_NUMBER</type>
    <length_max>4</length_max>
  </Column>
  <Column name="credit_card_no_length">
    <name>カード番号</name>
    <necessary></necessary>
    <type></type>
    <length></length>
    <length_max>16</length_max>
    <length_min>14</length_min>
  </Column>
  <Column name="credit_expire_month">
    <name>有効期限(月)</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length>2</length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="credit_expire_year">
    <name>有効期限(年)</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length>2</length>
    <length_max></length_max>
    <length_min></length_min>
  </Column>
  <Column name="credit_author_name" control="tbCreditAuthorName">
    <name>カード名義人</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max>50</length_max>
    <length_min></length_min>
    <regexp ptn="半角英字">^[a-zA-Z ]+$</regexp>
  </Column>
  <Column name="credit_security_code" control="tbCreditSecurityCode">
    <name>セキュリティコード</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_NUMBER</type>
    <length></length>
    <length_max>4</length_max>
    <length_min>3</length_min>
  </Column>

  <!-- クレジットカード登録名(表示用) -->
  <Column name="regist_credit_card_name" control="tbUserCreditCardName">
    <name>クレジットカード登録名</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max>100</length_max>
    <length_min></length_min>
  </Column>

  <!-- 楽天クレジットカード名義人 -->
  <Column name="credit_author_name" control="tbCreditAuthorNameRakuten">
    <name>カード名義人</name>
    <necessary>1</necessary>
    <type></type>
    <length></length>
    <length_max>50</length_max>
    <length_min></length_min>
    <regexp ptn="半角英字">^[a-zA-Z ]+$</regexp>
  </Column>
</UserCreditCardRegist>