<PasswordReminderInput>
  <Column name="login_id_for_input_check" control="tbLoginId">
    <name>@@User.login_id.name@@</name>
    <necessary>1</necessary>
    <type>@@User.login_id.type@@</type>
    <length></length>
    <length_max>@@User.login_id.length_max@@</length_max>
    <length_min>@@User.login_id.length_min@@</length_min>
  </Column>
  <Column name="mail_addr" control="tbMailAddr">
    <name>@@User.mail_addr.name@@</name>
    <necessary>1</necessary>
    <type>MAILADDRESS</type>
    <length></length>
    <length_max>256</length_max>
    <length_min></length_min>
  </Column>
</PasswordReminderInput>