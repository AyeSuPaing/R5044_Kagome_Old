<MailClick>
  
  <!-- メールクリックログ作成（情報取得） -->
  <CreteMailClickLog>
    <Statement>
      <![CDATA[
        -- メールクリックログ作成
        INSERT  w2_MailClickLog
                (
                  dept_id,
                  mailtext_id,
                  maildist_id,
                  action_no,
                  mailclick_id,
                  user_id
                )
        SELECT  dept_id,
                mailtext_id,
                maildist_id,
                action_no,
                mailclick_id,
                @user_id
          FROM  w2_MailClick
         WHERE  mailclick_key = @mailclick_key
   
        -- リダイレクトURL取得
        SELECT  mailclick_url
          FROM  w2_MailClick
         WHERE  mailclick_key = @mailclick_key
      ]]>
    </Statement>
    <Parameter>
      <Input Name="mailclick_key" Type="nvarchar" Size="30" />
      <Input Name="user_id" Type="nvarchar" Size="30" />
    </Parameter>
  </CreteMailClickLog>
  
</MailClick>