<AffiliateTagSetting>

  <!-- アフィリエイトタグ設定取得 -->
  <GetAffiliateTagSetting>
    <Statement>
      <![CDATA[
        SELECT  w2_AffiliateTagSetting.*
          FROM  w2_AffiliateTagSetting
         WHERE  w2_AffiliateTagSetting.affiliate_kbn = @affiliate_kbn
           AND  w2_AffiliateTagSetting.valid_flg = '1'
           AND  w2_AffiliateTagSetting.@@ affiliate_tag @@ <> ''
        ORDER BY w2_AffiliateTagSetting.display_order
		]]>
    </Statement>
    <Parameter>
      <Input Name="affiliate_kbn" Type="nvarchar" Size="10" />
    </Parameter>
  </GetAffiliateTagSetting>

</AffiliateTagSetting>
