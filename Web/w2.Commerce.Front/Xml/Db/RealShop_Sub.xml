<RealShop_Sub>

  <!-- リアル店舗商品在庫一覧WHERE文 -->
  <REALSHOP_SEARCH_WHERE>
    <Statement>
      <![CDATA[
         WHERE  w2_RealShop.valid_flg = '1'
             AND  w2_ProductView.product_id = @product_id
             AND  w2_ProductView.variation_id = @variation_id
             AND  (
                        @in_stock <> '1'
                        OR
                        (@in_stock = '1' AND w2_RealShopProductStock.real_shop_stock > 0)
                     )
            AND  (@@where@@)
      ]]>
    </Statement>
  </REALSHOP_SEARCH_WHERE>

  <!-- リアル店舗商品在庫一覧ORDERBY文 -->
  <REALSHOP_SEARCH_ORDER_BY>
    <Statement>
      <![CDATA[
        ORDER BY
          -- 常に一定の結果セットを得るため、主キー（昇順）ソート
          @@order_by@@, w2_RealShop.real_shop_id ASC
      ]]>
    </Statement>
  </REALSHOP_SEARCH_ORDER_BY>

</RealShop_Sub>