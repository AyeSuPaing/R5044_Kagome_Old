<BotChanLogin>
  <Column name="mail_address">
    <name>@@User.mail_addr.name@@</name>
    <necessary>1</necessary>
    <type>@@User.mail_addr.type@@</type>
    <length_max>256</length_max>
  </Column>
  <Column name="user_ip_address">
    <name>ユーザーIPアドレス</name>
    <necessary>1</necessary>
    <regexp ptn="正しいIPアドレス">^((2[0-4]\d|25[0-5]|[01]?\d\d?)\.){3}(2[0-4]\d|25[0-5]|[01]?\d\d?)$</regexp>
  </Column>
  <Column name="auth_text">
    <name>認証キー</name>
    <necessary>1</necessary>
    <type>HALFWIDTH_ALPHNUM</type>
  </Column>
</BotChanLogin>