<DmShippingHistory>

  <!-- ユーザーIDからDM発送履歴取得 -->
  <GetDmShippingHistoryByUserId>
    <Statement>
      <![CDATA[
        SELECT  *
          FROM  w2_DmShippingHistory
         WHERE  user_id = @user_id
      ]]>
    </Statement>
    <Parameter>
      <Input Name="user_id" Type="nvarchar" Size="30" />
    </Parameter>
  </GetDmShippingHistoryByUserId>

  <!-- ユーザー統合用 -->
  <UpdateForUserIntegration>
    <Statement>
      <![CDATA[
        UPDATE  w2_DmShippingHistory
           SET  w2_DmShippingHistory.user_id = @representative_user_id
         WHERE  w2_DmShippingHistory.user_id = @user_id
           AND  w2_DmShippingHistory.dm_code = @dm_code
      ]]>
    </Statement>
    <Parameter>
      <Input Name="user_id" Type="nvarchar" Size="30" />
      <Input Name="dm_code" Type="nvarchar" Size="30" />
      <Input Name="representative_user_id" Type="nvarchar" Size="30" />
    </Parameter>
  </UpdateForUserIntegration>

</DmShippingHistory>
