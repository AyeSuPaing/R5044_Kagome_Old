<OrderExtendSetting>

  <!-- 取得 -->
  <GetAll>
    <Statement>
      <![CDATA[
        SELECT  *
          FROM  w2_OrderExtendSetting
        ORDER BY sort_order ASC
      ]]>
    </Statement>
    <Parameter>
    </Parameter>
  </GetAll>

  <!-- 取得 -->
  <Get>
    <Statement>
      <![CDATA[
        SELECT  *
          FROM  w2_OrderExtendSetting
         WHERE  setting_id = @setting_id
      ]]>
    </Statement>
    <Parameter>
      <Input Name="setting_id" Type="nvarchar" Size="50" />
    </Parameter>
  </Get>

  <!-- 更新 -->
  <Update>
    <Statement>
      <![CDATA[
        UPDATE  w2_OrderExtendSetting
           SET  setting_name = @setting_name
                ,outline_kbn = @outline_kbn
                ,outline = @outline
                ,sort_order = @sort_order
                ,input_type = @input_type
                ,input_default = @input_default
                ,init_only_flg = @init_only_flg
                ,display_kbn = @display_kbn
                ,validator = @validator
                ,date_changed = GETDATE()
                ,last_changed = @last_changed
         WHERE  setting_id = @setting_id
      ]]>
    </Statement>
    <Parameter>
      <Input Name="setting_id" Type="nvarchar" Size="50" />
      <Input Name="setting_name" Type="nvarchar" Size="100" />
      <Input Name="outline_kbn" Type="nvarchar" Size="10" />
      <Input Name="outline" Type="nvarchar" Size="MAX" />
      <Input Name="sort_order" Type="int" />
      <Input Name="input_type" Type="nvarchar" Size="10" />
      <Input Name="input_default" Type="nvarchar" Size="MAX" />
      <Input Name="init_only_flg" Type="nvarchar" Size="30" />
      <Input Name="display_kbn" Type="nvarchar" Size="30" />
      <Input Name="validator" Type="nvarchar" Size="300" />
      <Input Name="last_changed" Type="nvarchar" Size="20" />
    </Parameter>
  </Update>

</OrderExtendSetting>