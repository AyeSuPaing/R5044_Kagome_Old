<TempDatas>

  <!-- 取得 -->
  <Get>
    <Statement>
      <![CDATA[
        SELECT  *
          FROM  w2_TempDatas
         WHERE  temp_type = @temp_type
           AND  temp_key = @temp_key
      ]]>
    </Statement>
    <Parameter>
      <Input Name="temp_type" Type="nvarchar" Size="50" />
      <Input Name="temp_key" Type="nvarchar" Size="200" />
    </Parameter>
  </Get>

  <!-- 登録 -->
  <Insert>
    <Statement>
      <![CDATA[
        INSERT  w2_TempDatas
                (
                  temp_type
                  ,temp_key
                  ,temp_data
                  ,date_created
                )
        VALUES  (
                  @temp_type
                  ,@temp_key
                  ,@temp_data
                  ,GETDATE()
                )
      ]]>
    </Statement>
    <Parameter>
      <Input Name="temp_type" Type="nvarchar" Size="50" />
      <Input Name="temp_key" Type="nvarchar" Size="200" />
      <Input Name="temp_data" Type="varbinary" Size="MAX" />
    </Parameter>
  </Insert>

  <!-- 削除 -->
  <Delete>
    <Statement>
      <![CDATA[
        DELETE  w2_TempDatas
         WHERE  temp_type = @temp_type
           AND  temp_key = @temp_key
      ]]>
    </Statement>
    <Parameter>
      <Input Name="temp_type" Type="nvarchar" Size="50" />
      <Input Name="temp_key" Type="nvarchar" Size="200" />
    </Parameter>
  </Delete>

</TempDatas>
