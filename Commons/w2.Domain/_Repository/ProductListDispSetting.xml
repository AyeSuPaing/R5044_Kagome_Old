<ProductListDispSetting>

  <!-- すべて取得 -->
  <GetAll>
    <Statement>
      <![CDATA[
        SELECT  *
          FROM  w2_ProductListDispSetting
        ORDER BY setting_id
      ]]>
    </Statement>
  </GetAll>
  
  <!-- 更新 -->
  <Update>
    <Statement>
      <![CDATA[
        UPDATE  w2_ProductListDispSetting
           SET  setting_name = @setting_name
                ,disp_enable = @disp_enable
                ,disp_no = @disp_no
                ,default_disp_flg = @default_disp_flg
                ,date_changed = GETDATE()
                ,last_changed = @last_changed
         WHERE  setting_id = @setting_id
           AND  setting_kbn = @setting_kbn
      ]]>
    </Statement>
    <Parameter>
      <Input Name="setting_id" Type="nvarchar" Size="2" />
      <Input Name="setting_name" Type="nvarchar" Size="50" />
      <Input Name="disp_enable" Type="nvarchar" Size="10" />
      <Input Name="disp_no" Type="int" />
      <Input Name="default_disp_flg" Type="nvarchar" Size="10" />
      <Input Name="last_changed" Type="nvarchar" Size="20" />
      <Input Name="setting_kbn" Type="nvarchar" Size="10" />
    </Parameter>
  </Update>

  <!-- 更新 -->
  <Insert>
    <Statement>
      <![CDATA[
        INSERT  w2_ProductListDispSetting
                (
                  setting_id
                  ,setting_name
                  ,disp_enable
                  ,disp_no
                  ,default_disp_flg
                  ,date_changed
                  ,last_changed
                  ,setting_kbn
                  ,disp_count
                )
        VALUES  (
                  @setting_id
                  ,@setting_name
                  ,@disp_enable
                  ,@disp_no
                  ,@default_disp_flg
                  ,GETDATE()
                  ,@last_changed
                  ,@setting_kbn
                  ,@disp_count
                )
      ]]>
    </Statement>
    <Parameter>
      <Input Name="setting_id" Type="nvarchar" Size="2" />
      <Input Name="setting_name" Type="nvarchar" Size="50" />
      <Input Name="disp_enable" Type="nvarchar" Size="10" />
      <Input Name="disp_no" Type="int" />
      <Input Name="default_disp_flg" Type="nvarchar" Size="10" />
      <Input Name="last_changed" Type="nvarchar" Size="20" />
      <Input Name="setting_kbn" Type="nvarchar" Size="10" />
      <Input Name="disp_count" Type="int" />
    </Parameter>
  </Insert>

  <!-- 削除 -->
  <Delete>
    <Statement>
      <![CDATA[
        DELETE  w2_ProductListDispSetting
         WHERE  setting_id = @setting_id
           AND  setting_kbn = @setting_kbn
      ]]>
    </Statement>
    <Parameter>
      <Input Name="setting_id" Type="nvarchar" Size="2" />
      <Input Name="setting_kbn" Type="nvarchar" Size="10" />
    </Parameter>
  </Delete>

  <!-- 削除 -->
  <DeleteBySettingKbn>
    <Statement>
      <![CDATA[
        DELETE  w2_ProductListDispSetting
         WHERE  setting_kbn = @setting_kbn
      ]]>
    </Statement>
    <Parameter>
      <Input Name="setting_kbn" Type="nvarchar" Size="10" />
    </Parameter>
  </DeleteBySettingKbn>

</ProductListDispSetting>
