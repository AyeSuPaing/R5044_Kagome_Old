<ProductTaxCategory>

  <!-- 全件取得 -->
  <GetAllTaxCategory>
    <Statement>
      <![CDATA[
        SELECT  *
          FROM  w2_ProductTaxCategory
        ORDER BY display_order
      ]]>
    </Statement>
  </GetAllTaxCategory>
  
  <!-- 取得 -->
  <Get>
    <Statement>
      <![CDATA[
        SELECT  *
          FROM  w2_ProductTaxCategory
         WHERE  tax_category_id = @tax_category_id
      ]]>
    </Statement>
    <Parameter>
      <Input Name="tax_category_id" Type="nvarchar" Size="30" />
    </Parameter>
  </Get>
  
  <!-- 登録 -->
  <Insert>
    <Statement>
      <![CDATA[
        INSERT  w2_ProductTaxCategory
                (
                  tax_category_id
                  ,tax_category_name
                  ,tax_rate
                  ,display_order
                  ,date_created
                  ,date_changed
                  ,last_changed
                )
        VALUES  (
                  @tax_category_id
                  ,@tax_category_name
                  ,@tax_rate
                  ,@display_order
                  ,GETDATE()
                  ,GETDATE()
                  ,@last_changed
                )
      ]]>
    </Statement>
    <Parameter>
      <Input Name="tax_category_id" Type="nvarchar" Size="30" />
      <Input Name="tax_category_name" Type="nvarchar" Size="40" />
      <Input Name="tax_rate" Type="decimal" Size="5,2" />
      <Input Name="display_order" Type="int" />
      <Input Name="last_changed" Type="nvarchar" Size="20" />
    </Parameter>
  </Insert>
  
  <!-- 更新 -->
  <Update>
    <Statement>
      <![CDATA[
        UPDATE  w2_ProductTaxCategory
           SET  tax_category_name = @tax_category_name
                ,tax_rate = @tax_rate
                ,display_order = @display_order
                ,date_changed = GETDATE()
                ,last_changed = @last_changed
         WHERE  tax_category_id = @tax_category_id
      ]]>
    </Statement>
    <Parameter>
      <Input Name="tax_category_id" Type="nvarchar" Size="30" />
      <Input Name="tax_category_name" Type="nvarchar" Size="40" />
      <Input Name="tax_rate" Type="decimal" Size="5,2" />
      <Input Name="display_order" Type="int" />
      <Input Name="last_changed" Type="nvarchar" Size="20" />
    </Parameter>
  </Update>
  
  <!-- 削除 -->
  <Delete>
    <Statement>
      <![CDATA[
        DELETE  w2_ProductTaxCategory
         WHERE  tax_category_id = @tax_category_id
      ]]>
    </Statement>
    <Parameter>
      <Input Name="tax_category_id" Type="nvarchar" Size="30" />
    </Parameter>
  </Delete>

</ProductTaxCategory>
