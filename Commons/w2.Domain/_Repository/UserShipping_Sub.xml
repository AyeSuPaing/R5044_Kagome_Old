<UserShipping_Sub>

  <!-- 検索用WHERE文 -->
  <USERSHIPPING_SEARCH_WHERE>
    <Statement>
      <![CDATA[
         WHERE  w2_UserShipping.user_id = @user_id
      ]]>
    </Statement>
  </USERSHIPPING_SEARCH_WHERE>

  <!-- 検索用ORDER_BY -->
  <USERSHIPPING_SEARCH_ORDER_BY>
    <Statement>
      <![CDATA[
        ORDER BY
          w2_UserShipping.date_created DESC,
          -- 常に一定の結果セットを得るため、主キー（昇順）ソート
          w2_UserShipping.user_id ASC, w2_UserShipping.shipping_no ASC
      ]]>
    </Statement>
  </USERSHIPPING_SEARCH_ORDER_BY>

</UserShipping_Sub>
