<Zipcode>
  
  <!-- 郵便番号から住所を取得 -->
  <GetByZipcode>
    <Statement>
      <![CDATA[
        SELECT  w2_Zipcode.*
          FROM  w2_Zipcode
         WHERE  w2_Zipcode.zipcode = @zipcode
      ]]>
    </Statement>
    <Parameter>
      <Input Name="zipcode" Type="nvarchar" Size="7" />
    </Parameter>
  </GetByZipcode>
  
</Zipcode>