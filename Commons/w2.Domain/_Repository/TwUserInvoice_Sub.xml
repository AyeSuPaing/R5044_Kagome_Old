<TwUserInvoice_Sub>

  <!-- 検索用WHERE文 -->
  <TWUSERINVOICE_SEARCH_WHERE>
    <Statement>
      <![CDATA[
          WHERE  w2_TwUserInvoice.user_id = @user_id
      ]]>
    </Statement>
  </TWUSERINVOICE_SEARCH_WHERE>

  <!-- 検索用ORDER BY -->
  <TWUSERINVOICE_SEARCH_ORDER_BY>
    <Statement>
      <![CDATA[
          ORDER BY
          w2_TwUserInvoice.date_created DESC,
          w2_TwUserInvoice.user_id ASC, w2_TwUserInvoice.tw_invoice_no ASC
      ]]>
    </Statement>
  </TWUSERINVOICE_SEARCH_ORDER_BY>

</TwUserInvoice_Sub>
