<OperatorAuthority>

  <!-- Get -->
  <Get>
    <Statement>
      <![CDATA[
        SELECT  *
          FROM  w2_OperatorAuthority
         WHERE  shop_id = @shop_id
           AND  operator_id = @operator_id
      ]]>
    </Statement>
    <Parameter>
      <Input Name="shop_id" Type="nvarchar" Size="10" />
      <Input Name="operator_id" Type="nvarchar" Size="20" />
    </Parameter>
  </Get>

  <!-- Insert -->
  <Insert>
    <Statement>
      <![CDATA[
        INSERT  w2_OperatorAuthority
                (
                  w2_OperatorAuthority.shop_id,
                  w2_OperatorAuthority.operator_id,
                  w2_OperatorAuthority.condition_type,
                  w2_OperatorAuthority.permission,
                  w2_OperatorAuthority.condition_value
                )
        VALUES  (
                  @shop_id,
                  @operator_id,
                  @condition_type,
                  @permission,
                  @condition_value
                )
      ]]>
    </Statement>
    <Parameter>
      <Input Name="shop_id" Type="nvarchar" Size="10" />
      <Input Name="operator_id" Type="nvarchar" Size="20" />
      <Input Name="condition_type" Type="nvarchar" Size="30" />
      <Input Name="permission" Type="nvarchar" Size="1" />
      <Input Name="condition_value" Type="nvarchar" Size="30" />
    </Parameter>
  </Insert>

  <!-- Delete -->
  <Delete>
    <Statement>
      <![CDATA[
        DELETE  w2_OperatorAuthority
         WHERE  shop_id = @shop_id
           AND  operator_id = @operator_id
      ]]>
    </Statement>
    <Parameter>
      <Input Name="shop_id" Type="nvarchar" Size="10" />
      <Input Name="operator_id" Type="nvarchar" Size="20" />
    </Parameter>
  </Delete>

</OperatorAuthority>
