<ContentsTag>
  
  <!-- 取得 -->
  <Get>
    <Statement>
      <![CDATA[
        SELECT  *
          FROM  w2_ContentsTag
         WHERE  contents_tag_id = @contents_tag_id
      ]]>
    </Statement>
    <Parameter>
      <Input Name="contents_tag_id" Type="bigint" />
    </Parameter>
  </Get>

  <!-- 全取得 -->
  <GetAll>
    <Statement>
      <![CDATA[
        SELECT  *
          FROM  w2_ContentsTag
      ]]>
    </Statement>
    <Parameter>
    </Parameter>
  </GetAll>

  <!-- 取得 -->
  <GetByName>
    <Statement>
      <![CDATA[
        SELECT  *
          FROM  w2_ContentsTag
         WHERE  contents_tag_name = @contents_tag_name
      ]]>
    </Statement>
    <Parameter>
      <Input Name="contents_tag_name" Type="nvarchar" Size="50" />
    </Parameter>
  </GetByName>
  
  <!-- 登録 -->
  <Insert>
    <Statement>
      <![CDATA[
        INSERT  w2_ContentsTag
                (
                  contents_tag_name
                  ,date_created
                  ,date_changed
                )
        VALUES  (
                  @contents_tag_name
                  ,GETDATE()
                  ,GETDATE()
                )
      ]]>
    </Statement>
    <Parameter>
      <Input Name="contents_tag_name" Type="nvarchar" Size="50" />
    </Parameter>
  </Insert>

</ContentsTag>
