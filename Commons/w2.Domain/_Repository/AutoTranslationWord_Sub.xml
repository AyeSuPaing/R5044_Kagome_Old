<AutoTranslationWord_Sub>

  <!-- 検索用WHERE文 -->
  <AUTO_TRANSLATION_WORD_SEARCH_WHERE>
    <Statement>
      <![CDATA[
        WHERE  (
                 (@word_before_like_escaped = '')
                 AND
                 (@language_code_like_escaped = '')
                 OR
                 (
                    (word_before LIKE + '%' + @word_before_like_escaped + '%' ESCAPE '#')
                    AND
                    (language_code LIKE + '%' + @language_code_like_escaped + '%' ESCAPE '#')
                 )
               )
      ]]>
    </Statement>
    <Parameter>
        <Input Name="word_before_like_escaped" Type="nvarchar" Size="Max" />
        <Input Name="language_code_like_escaped" Type="nvarchar" Size="10" />
    </Parameter>
  </AUTO_TRANSLATION_WORD_SEARCH_WHERE>
  
  <!-- 検索用ORDER BY -->
  <AUTO_TRANSLATION_WORD_SEARCH_ORDER_BY>
    <Statement>
      <![CDATA[
        ORDER BY word_before , language_code ASC
      ]]>
    </Statement>
    <Parameter>
    </Parameter>
  </AUTO_TRANSLATION_WORD_SEARCH_ORDER_BY>

</AutoTranslationWord_Sub>
