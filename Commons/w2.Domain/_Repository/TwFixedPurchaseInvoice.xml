<TwFixedPurchaseInvoice>

  <!-- Get Taiwan Fixed Purchase Invoice -->
  <GetTaiwanFixedPurchaseInvoice>
    <Statement>
      <![CDATA[
        SELECT  w2_TwFixedPurchaseInvoice.*
          FROM  w2_TwFixedPurchaseInvoice
         WHERE  w2_TwFixedPurchaseInvoice.fixed_purchase_id = @fixed_purchase_id
           AND  w2_TwFixedPurchaseInvoice.fixed_purchase_shipping_no = @fixed_purchase_shipping_no
      ]]>
    </Statement>
    <Parameter>
      <Input Name="fixed_purchase_id" Type="nvarchar" Size="30" />
      <Input Name="fixed_purchase_shipping_no" Type="int" />
    </Parameter>
  </GetTaiwanFixedPurchaseInvoice>

  <!-- Insert Taiwan Fixed Purchase Invoice -->
  <InsertTaiwanFixedPurchaseInvoice>
    <Statement>
      <![CDATA[
        INSERT  w2_TwFixedPurchaseInvoice
                (
                  fixed_purchase_id
                  ,fixed_purchase_shipping_no
                  ,tw_uniform_invoice
                  ,tw_uniform_invoice_option1
                  ,tw_uniform_invoice_option2
                  ,tw_carry_type
                  ,tw_carry_type_option
                  ,date_created
                  ,date_changed
                )
        VALUES  (
                  @fixed_purchase_id
                  ,@fixed_purchase_shipping_no
                  ,@tw_uniform_invoice
                  ,@tw_uniform_invoice_option1
                  ,@tw_uniform_invoice_option2
                  ,@tw_carry_type
                  ,@tw_carry_type_option
                  ,GETDATE()
                  ,GETDATE()
                )
      ]]>
    </Statement>
    <Parameter>
      <Input Name="fixed_purchase_id" Type="nvarchar" Size="30" />
      <Input Name="fixed_purchase_shipping_no" Type="int" />
      <Input Name="tw_uniform_invoice" Type="nvarchar" Size="10" />
      <Input Name="tw_uniform_invoice_option1" Type="nvarchar" Size="10" />
      <Input Name="tw_uniform_invoice_option2" Type="nvarchar" Size="20" />
      <Input Name="tw_carry_type" Type="nvarchar" Size="16" />
      <Input Name="tw_carry_type_option" Type="nvarchar" Size="16" />
    </Parameter>
  </InsertTaiwanFixedPurchaseInvoice>

  <!-- Update Taiwan Fixed Purchase Invoice -->
  <UpdateTaiwanFixedPurchaseInvoice>
    <Statement>
      <![CDATA[
        UPDATE  w2_TwFixedPurchaseInvoice
           SET  tw_uniform_invoice = @tw_uniform_invoice
                ,tw_uniform_invoice_option1 = @tw_uniform_invoice_option1
                ,tw_uniform_invoice_option2 = @tw_uniform_invoice_option2
                ,tw_carry_type = @tw_carry_type
                ,tw_carry_type_option = @tw_carry_type_option
                ,date_changed = GETDATE()
         WHERE  fixed_purchase_id = @fixed_purchase_id
           AND  fixed_purchase_shipping_no = @fixed_purchase_shipping_no
      ]]>
    </Statement>
    <Parameter>
      <Input Name="fixed_purchase_id" Type="nvarchar" Size="30" />
      <Input Name="fixed_purchase_shipping_no" Type="int" />
      <Input Name="tw_uniform_invoice" Type="nvarchar" Size="10" />
      <Input Name="tw_uniform_invoice_option1" Type="nvarchar" Size="10" />
      <Input Name="tw_uniform_invoice_option2" Type="nvarchar" Size="20" />
      <Input Name="tw_carry_type" Type="nvarchar" Size="16" />
      <Input Name="tw_carry_type_option" Type="nvarchar" Size="16" />
    </Parameter>
  </UpdateTaiwanFixedPurchaseInvoice>

  <!-- 削除 -->
  <Delete>
    <Statement>
      <![CDATA[
        DELETE  w2_TwFixedPurchaseInvoice
         WHERE  w2_TwFixedPurchaseInvoice.fixed_purchase_id = @fixed_purchase_id
      ]]>
    </Statement>
    <Parameter>
      <Input Name="fixed_purchase_id" Type="nvarchar" Size="30" />
    </Parameter>
  </Delete>

</TwFixedPurchaseInvoice>
