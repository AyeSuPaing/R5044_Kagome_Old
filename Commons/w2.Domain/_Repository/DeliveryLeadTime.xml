<DeliveryLeadTime>

  <!-- Get All -->
  <GetAll>
    <Statement>
      <![CDATA[
        SELECT  w2_DeliveryLeadTime.*
          FROM  w2_DeliveryLeadTime
         WHERE  shop_id = @shop_id
           AND  delivery_company_id = @delivery_company_id
      ]]>
    </Statement>
    <Parameter>
      <Input Name="shop_id" Type="nvarchar" Size="10" />
      <Input Name="delivery_company_id" Type="nvarchar" Size="10" />
    </Parameter>
  </GetAll>

  <!-- 登録 -->
  <Insert>
    <Statement>
      <![CDATA[
        INSERT  w2_DeliveryLeadTime
                (
                  shop_id
                  ,delivery_company_id
                  ,lead_time_zone_no
                  ,lead_time_zone_name
                  ,zip
                  ,shipping_lead_time
                  ,date_created
                  ,date_changed
                  ,last_changed
                )
        VALUES  (
                  @shop_id
                  ,@delivery_company_id
                  ,@lead_time_zone_no
                  ,@lead_time_zone_name
                  ,@zip
                  ,@shipping_lead_time
                  ,GETDATE()
                  ,GETDATE()
                  ,@last_changed
                )
      ]]>
    </Statement>
    <Parameter>
      <Input Name="shop_id" Type="nvarchar" Size="10" />
      <Input Name="delivery_company_id" Type="nvarchar" Size="10" />
      <Input Name="lead_time_zone_no" Type="int" />
      <Input Name="lead_time_zone_name" Type="nvarchar" Size="50" />
      <Input Name="zip" Type="ntext" />
      <Input Name="shipping_lead_time" Type="int" />
      <Input Name="last_changed" Type="nvarchar" Size="20" />
    </Parameter>
  </Insert>

  <!-- 削除 -->
  <Delete>
    <Statement>
      <![CDATA[
        DELETE  w2_DeliveryLeadTime
         WHERE  shop_id = @shop_id
           AND  delivery_company_id = @delivery_company_id
      ]]>
    </Statement>
    <Parameter>
      <Input Name="shop_id" Type="nvarchar" Size="10" />
      <Input Name="delivery_company_id" Type="nvarchar" Size="10" />
    </Parameter>
  </Delete>

</DeliveryLeadTime>