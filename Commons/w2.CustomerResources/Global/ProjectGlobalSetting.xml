<!-- 
ここで定義したものはBASEで定義したものを上書きする
ここに定義しないものはBASEのまま
プロジェクト別に定義を持ちたい場合は、必要に応じて要素を追加、定義してください
-->

<GlobalSettings>
  <!-- 対応国ISOコード -->
  <Countries>
    <Code>JP</Code>
    <Code>US</Code>
    <Code>TW</Code>
    <Code>CN</Code>
  </Countries>

  <!-- 対応言語コード・通貨ロケールID -->
  <Languages>
    <Language Code="ja" LocaleId="ja-JP" DefaultUrl=""/>
    <Language Code="en" LocaleId="en-US" DefaultUrl=""/>
    <Language Code="fr" LocaleId="fr-FR" DefaultUrl=""/>
    <Language Code="zhCN" LocaleId="zh-CN" DefaultUrl=""/>
    <Language Code="zh" LocaleId="zh-TW" DefaultUrl=""/>
  </Languages>

  <!-- 対応通貨コード・通貨ロケールID -->
  <Currencies>
    <Currency Code="JPY">
      <CurrencyLocales>
        <CurrencyLocale LocaleId="ja-JP" LocaleFormat="{0:#,0}円" LocaleFormatJapanese="{0:C}" LocaleFormatWithoutSymbol="{0:#,0}"/>
      </CurrencyLocales>
    </Currency>
    <Currency Code="USD">
      <CurrencyLocales>
        <CurrencyLocale LocaleId="en-US" LocaleFormat="{0:C}" LocaleFormatWithoutSymbol="{0:#.##,0}"/>
      </CurrencyLocales>
    </Currency>
    <Currency Code="EUR">
      <CurrencyLocales>
        <CurrencyLocale LocaleId="fr-FR" LocaleFormat="{0:C}" LocaleFormatWithoutSymbol="{0:#.##,0}"/>
      </CurrencyLocales>
    </Currency>
    <Currency Code="CNY">
      <CurrencyLocales>
        <CurrencyLocale LocaleId="zh-CN" LocaleFormat="{0:C}" LocaleFormatWithoutSymbol="{0:#.##,0}"/>
      </CurrencyLocales>
    </Currency>
    <Currency Code="TWD">
      <CurrencyLocales>
        <CurrencyLocale LocaleId="zh-TW" LocaleFormat="{0:C0}" LocaleFormatWithoutSymbol="{0:#,0}"/>
      </CurrencyLocales>
    </Currency>
  </Currencies>

  <!-- 基軸通貨 -->
  <KeyCurrency Code="JPY" LocaleId="ja-JP" LocaleFormat="{0:C}" PdfFormat="'\'#,0" UnitString="¥" />

  <!-- 初回アクセス時の初期設定(Frontで利用) -->
  <Regions>
    <Region CountryIsoCode="JP" LanguageCode="ja" LanguageLocaleId="ja-JP" CurrencyCode="JPY" CurrencyLocaleId="ja-JP"/>
    <Region CountryIsoCode="US" LanguageCode="en" LanguageLocaleId="en-US" CurrencyCode="USD" CurrencyLocaleId="en-US"/>
    <Region CountryIsoCode="TW" LanguageCode="zh" LanguageLocaleId="zh-TW" CurrencyCode="TWD" CurrencyLocaleId="zh-TW"/>
    <Region CountryIsoCode="CN" LanguageCode="zhCN" LanguageLocaleId="zh-CN" CurrencyCode="CNY" CurrencyLocaleId="zh-CN"/>
  </Regions>
  <!-- IP範囲対応外のデフォルト国ISOコード -->
  <NotFoundCountryIsoCode>US</NotFoundCountryIsoCode>

  <!-- 切り替え方式 L:言語 C:通貨 LC:言語＋通貨 -->
  <FrontChangeType>LC</FrontChangeType>

  <!-- フロント言語切り替えの選択肢 -->
  <FrontLanguages>
    <FrontLanguage Code="ja" SelectName="日本語"/>
    <FrontLanguage Code="en" SelectName="English"/>
    <FrontLanguage Code="zh" SelectName="台湾"/>
    <FrontLanguage Code="zhCN" SelectName="中国"/>
  </FrontLanguages>

  <!-- フロント通貨切り替えの選択肢 -->
  <FrontCurrencies>
    <FrontCurrency Code="JPY" LocaleId="ja-JP" SelectName="円(￥)"/>
    <FrontCurrency Code="USD" LocaleId="en-US" SelectName="USD(＄)"/>
    <FrontCurrency Code="TWD" LocaleId="zh-TW" SelectName="台湾ドル(NT＄)"/>
    <FrontCurrency Code="CNY" LocaleId="zh-CN" SelectName="人民元(￥)"/>
  </FrontCurrencies>

  <!-- フロント言語＋通貨切り替えの選択肢 -->
  <FrontLanguageCurrencies>
    <FrontLanguageCurrency LanguageCode="ja" CurrencyCode="JPY" CurrencyLocaleId="ja-JP" SelectName="日本/￥"/>
    <FrontLanguageCurrency LanguageCode="en" CurrencyCode="USD" CurrencyLocaleId="en-US" SelectName="USA/＄"/>
    <FrontLanguageCurrency LanguageCode="fr" CurrencyCode="EUR" CurrencyLocaleId="fr-FR" SelectName="ユーロ/€"/>
    <FrontLanguageCurrency LanguageCode="zh" CurrencyCode="TWD" CurrencyLocaleId="zh-TW" SelectName="台湾ドル(NT＄)"/>
    <FrontLanguageCurrency LanguageCode="zhCN" CurrencyCode="CNY" CurrencyLocaleId="zh-CN" SelectName="人民元(￥)"/>
  </FrontLanguageCurrencies>

  <!-- SMS送信の際に使う電話番号の国コード。ここで定義していないものはSMS送信対象外となる -->
  <InternationalTelephoneCode>
    <Code iso="JP" number="81" />
    <Code iso="TW" number="886" />
    <Code iso="US" number="1" />
    <Code iso="VN" number="84" />
  </InternationalTelephoneCode>

  <!-- IP範囲対応外のデフォルト国ISOコード -->
  <NotFoundCountryIsoCode>US</NotFoundCountryIsoCode>

  <!-- Google接続設定 -->
  <!-- 
    グーグルに接続するための設定です
    GoogleApiKey → GoogleApiキー
    TranslationUrl → 翻訳データを取得するためのUrl
   -->
  <GoogleConnection
    GoogleApiKey=""
    TranslationUrl="https://translation.googleapis.com/language/translate/v2"
  />

</GlobalSettings>