      <Value>
        <![CDATA[
          w2_ProductView.product_color_id
        ]]>
      </Value>
    </Field>
    <Field ApiRequestKey="condition">
      <Value>
        <![CDATA[
          'new'
        ]]>
      </Value>
    </Field>
    <!--Currency for the value specified. The Marketing API supports all of the currencies supported by ad accounts. Use ISO 4217 for currency standards-->
    <Field ApiRequestKey="currency">
      <Value>
        <![CDATA[
          'JPY'
        ]]>
      </Value>
    </Field>
    <Field ApiRequestKey="custom_label_0">
      <Value>
