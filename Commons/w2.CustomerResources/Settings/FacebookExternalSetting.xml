<FacebookExternalSetting>
  <ExportSql ExecTimeOut="120">
    <Sql>
      <![CDATA[
        SELECT  @@ fields @@
          FROM  w2_ProductView
                INNER JOIN w2_MallExhibitsConfig ON
                (
                  w2_ProductView.product_id = w2_MallExhibitsConfig.product_id
                  AND
                  w2_ProductView.shop_id = w2_MallExhibitsConfig.shop_id
                )
                LEFT JOIN w2_ProductSaleView ON
                (
                  w2_ProductView.productsale_id = w2_ProductSaleView.productsale_id
                )
         WHERE  @@ exhibits_flg_where @@
      ]]>
    </Sql>
  </ExportSql>

  <Fields>
    <Field ApiRequestKey="variation_id" ExportFlg="false">
      <Value>
        <![CDATA[
          w2_ProductView.variation_id
        ]]>
      </Value>
    </Field>
    <Field ApiRequestKey="additional_image_urls">
      <Value>
        <![CDATA[
          w2_ProductView.image_head
        ]]>
      </Value>
    </Field>
