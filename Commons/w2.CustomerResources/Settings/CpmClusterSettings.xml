<CpmClusterSettings>

  <!-- CPMクラスタ設定 -->
  <!--
    <Setting>は計算時に判定する順に並んでいる。
    
    id              : DBに格納されるID
    Name            : 表示名称
    BuyCount        : 累計購入回数(以上)
    BuyAmount       : 累計購入金額(以上)  ※購買単価の7倍程度を設定する
    EnrollmentDays  : 在籍期間(以上)
  -->
  <ClusterSettings>
    <Setting id="LOYL_">
      <Name>優良</Name>
      <BuyCount>2</BuyCount>
      <BuyAmount>70000</BuyAmount>
      <EnrollmentDays>210</EnrollmentDays>
    </Setting>
    <Setting id="TRDY_">
      <Name>流行</Name>
      <BuyCount>2</BuyCount>
      <BuyAmount>70000</BuyAmount>
      <EnrollmentDays>90</EnrollmentDays>
    </Setting>
    <Setting id="STDY_">
      <Name>コツコツ</Name>
      <BuyCount>2</BuyCount>
      <BuyAmount></BuyAmount>
      <EnrollmentDays>90</EnrollmentDays>
    </Setting>
    <Setting id="SCND_">
      <Name>よちよち</Name>
      <BuyCount>2</BuyCount>
      <BuyAmount></BuyAmount>
      <EnrollmentDays></EnrollmentDays>
    </Setting>
    <Setting id="FRST_">
      <Name>初回</Name>
      <BuyCount>1</BuyCount>
      <BuyAmount></BuyAmount>
      <EnrollmentDays></EnrollmentDays>
    </Setting>
  </ClusterSettings>
  
  <!-- CPMクラスタアクティブ設定 -->
  <!--
    計算時に判定する順に並んでいる。
  
    id              : DBに格納されるID
    Name            : 表示名称
    AwayDays        : 離脱期間(未満) 
    ※AwayDaysが空となるクラスタを必ず作成してください。
  -->
  <ClusterActiveSettings>
    <Setting id="ACT">
      <Name>現役</Name>
      <AwayDays>240</AwayDays>
    </Setting>
    <Setting id="INA">
      <Name>離脱</Name>
      <AwayDays></AwayDays>
    </Setting>
  </ClusterActiveSettings>
  <!-- CPMクラスタ名区切り文字 -->
  <ClusterNameSeparator>-</ClusterNameSeparator>

</CpmClusterSettings>
