<CrossPointOptionSetting>
  <ReasonId>
    <!--
      <Value pointIncKbn="" Value="">Comment</Value>
      PointIncKbn：ｗ２のポイント加算区分
      Value：CrossPointの管理画面に設定されている理由ID
    -->
    <!-- 新規登録ポイント発行 -->
    <Value PointIncKbn="02" Value="18" />
    <!-- ログイン毎ポイント発行 -->
    <Value PointIncKbn="03" Value="24" />
    <!-- 初回購入時ポイント発行 -->
    <Value PointIncKbn="04" Value="19" />
    <!-- クリックポイント発行 -->
    <Value PointIncKbn="05" Value="25" />
    <!-- ポイント利用変更（次回定期購入） -->
    <Value PointIncKbn="12" Value="26" />
    <!-- 汎用ポイントルール -->
    <Value PointIncKbn="90" Value="21" />
    <!-- 誕生日ポイント -->
    <Value PointIncKbn="91" Value="22" />
    <!-- レビュー投稿時ポイント発行  -->
    <Value PointIncKbn="92" Value="27" />
    <!-- マスタアップロード -->
    <Value PointIncKbn="97" Value="23" />
    <!-- オペレータポイント調整 -->
    <Value PointIncKbn="99" Value="20" />
  </ReasonId>
</CrossPointOptionSetting>