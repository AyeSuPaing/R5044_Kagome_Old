<!--
サイト切り替えURLサンプル：
http://ドメイン/Default.aspx?changesite=sp
http://ドメイン/Default.aspx?changesite=pc
-->

<SmartPhoneSiteSetting>

  <!--
    （レスポンシブなど）スマートフォンページに遷移させず
    アクセスログのみ取得したい場合は、RootPathを空にしてください。
  -->
  
  <!-- 全てのスマートフォン -->
  <Setting name="SmartPhone用サイト" pattern="^.*(iPhone|iPod|Android.*Mobile).*$">
    <RootPath><![CDATA[~/SmartPhone/]]></RootPath>
  </Setting>

  <!-- Android -->
  <!--Setting name="Android" pattern="^.*Android.*$">
    <RootPath><![CDATA[~/Android/]]></RootPath>
  </Setting-->

</SmartPhoneSiteSetting>
