<ParamDefineSetting>

  <!-- 店舗ID -->
  <ShopIds>
    <ShopId>0</ShopId>
  </ShopIds>
  
  <!-- ファイル種別 -->
  <FileTypes>
    <Type>AddYahooOrder</Type>
    <Type>AddYahooOrderItem</Type>
    <Type>AddYahooCustomFields</Type>
    <Type>ImportNewYahooOrder</Type>
  </FileTypes>
 
  <!-- Yahoo受注取込 -->
  <AddYahooOrder>
    <!-- ヤフーCSV内の決済種別名に紐づく決済種別IDと入金ステータスを設定します。 -->
    <!-- 例：<Setting name="payment_a10" value="Yahoo au決済" payment_kbn="M91" payment_status="0" /> -->
    <OrderPaymentKbnAndPaymentStatusSettings>
      <Setting name="payment_a16" value="Yahoo!マネー/預金払い" payment_kbn="M76" payment_status="1" />
      <Setting name="payment_a1" value="クレジットカード" payment_kbn="K10" payment_status="0" />
      <Setting name="payment_d1" value="代金引換" payment_kbn="K20" payment_status="0" />
      <Setting name="payment_a17" value="PayPay払い" payment_kbn="M77" payment_status="1" />
      <!--ヤフーポイント-->
      <Setting name="payment_z1" value="決済なし" payment_kbn="K90" payment_status="1" />
    </OrderPaymentKbnAndPaymentStatusSettings>

    <!-- カスタムフィールド (注文メモに書き込む) 複数選択可能 -->
    <!-- Yahoo社の項目表の "キー名" を指定してください。https://developer.yahoo.co.jp/webapi/shopping/orderInfo.html#field -->
    <!-- ただし、分類が "商品" とある項目は取り込めません。-->
    <!-- また、name属性を追加し、任意の値を指定してください。 -->
    <!-- 例:
      <CustomField name="ship_notes">ShipNotes</CustomField>
      <CustomField name="login_flg,">IsLogin</CustomField>
    -->
    <CustomFields>
    </CustomFields>
  </AddYahooOrder>

  <!-- Add yahoo order item -->
  <AddYahooOrderItem>
  </AddYahooOrderItem>
  
  <!-- Yahooカスタムフィールド取込 -->
  <AddYahooCustomFields>
  </AddYahooCustomFields>

  <!-- Import new yahoo order -->
  <ImportNewYahooOrder>
    <!-- ヤフーCSV内の決済種別名に紐づく決済種別IDと入金ステータスを設定します。 -->
    <OrderPaymentKbnAndPaymentStatusSettings>
      <Setting name="payment_a16" value="Yahoo!マネー/預金払い" payment_kbn="M76" payment_status="1" />
      <Setting name="payment_a1" value="クレジットカード" payment_kbn="K10" payment_status="0" />
      <Setting name="payment_d1" value="代金引換" payment_kbn="K20" payment_status="0" />
      <Setting name="payment_a17" value="PayPay払い" payment_kbn="M77" payment_status="1" />
      <!--ヤフーポイント-->
      <Setting name="payment_z1" value="決済なし" payment_kbn="K90" payment_status="1" />
    </OrderPaymentKbnAndPaymentStatusSettings>
    <!-- ヤフーCSV内の注文ステータスに紐づく注文ステータスを設定します。 -->
    <OrderStatusSettings>
      <Setting name="未入力" value="ODR" />
      <Setting name="新規注文" value="ODR" />
      <Setting name="新規予約" value="ODR" />
      <Setting name="予約中" value="ODR" />
      <Setting name="処理中" value="ODR" />
      <Setting name="完了" value="ODR" />
      <Setting name="保留" value="ODR" />
    </OrderStatusSettings>
  </ImportNewYahooOrder>

</ParamDefineSetting>
